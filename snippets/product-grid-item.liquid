{% unless grid_item_width %}
  {% assign grid_item_width = 'small-12 medium-3 large-3 columns' %}
{% endunless %}

{% assign on_sale = false %}
{% if product.compare_at_price > product.price %}
  {% assign on_sale = true %}
  {%- assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price -%}
{% endif %}

{% assign sold_out = true %}
{% if product.available %}
  {% assign sold_out = false %}
{% endif %}

{%- comment -%} VALIDACIÓN: Mostrar botones SOLO en /collections/ {%- endcomment -%}
{% assign is_collection_page = false %}
{% if template == 'collection' or template.name == 'collection' %}
  {% assign is_collection_page = true %}
{% endif %}

<div class="{{ grid_item_width }} product-loop-item wf-product-card">
  
  <div class="wf-card-image-wrap">
    {% if settings.show_product_badges %}
      {% if sold_out %}
        <div class="product-badge badge__sold-out">{{ 'products.product.out_of_stock' | t }}</div>
      {% endif %}
      {% if on_sale and sold_out == false and discount_percentage > 0 %}
        <div class="product-badge badge__sale">{{ 'products.product.save' | t: discount: discount_percentage }}</div>
      {% endif %}
    {% endif %}

    <a href="{{ product.url | within: collection }}" class="product-loop-image secondary-image-enabled">
      {%- assign img_url = product.featured_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
      {% unless product.featured_image == blank %}
        <img class="lazyload product-image_featured" src="{{ product.featured_image | img_url: '400x533', crop: 'center' }}"
          data-src="{{ img_url }}"
          data-widths="[180, 360, 540, 720, 900, 1080]"
          data-aspectratio="0.75"
          data-sizes="auto"
          alt="{{ product.featured_image.alt | escape }}">

        {%- assign secondary_img = product.images[1] -%}
        {% unless secondary_img == blank %}
          <img class="product-image_secondary" src="{{ secondary_img | img_url: '400x533', crop: 'center' }}" alt="{{ product.title | escape }}" loading="lazy">
        {% endunless %}
      {% endunless %}
    </a>

    {%- comment -%} OVERLAY HÍBRIDO (AHORA CON FORMS NATIVOS) {%- endcomment -%}
    {% if is_collection_page %}
      <div class="wf-gs-overlay">
        {% if product.available %}
          {% if product.variants.size > 1 %}
            <div class="wf-gs-sizes-title">+ Añadir rápido</div>
            <div class="wf-gs-sizes">
              {% for variant in product.variants %}
                {%- comment -%} ENVUELTO EN FORM PARA ACTIVAR EL CARRITO LATERAL {%- endcomment -%}
                <form method="post" action="/cart/add" class="wf-gs-form">
                  <input type="hidden" name="id" value="{{ variant.id }}">
                  <input type="hidden" name="quantity" value="1">
                  <button type="submit" class="wf-gs-size-btn" {% unless variant.available %}disabled{% endunless %} title="{{ variant.title }}">
                    {{ variant.title | escape }}
                  </button>
                </form>
              {% endfor %}
            </div>
          {% else %}
            <form method="post" action="/cart/add" class="wf-gs-form wf-gs-form--full">
              <input type="hidden" name="id" value="{{ product.variants.first.id }}">
              <input type="hidden" name="quantity" value="1">
              <button type="submit" class="wf-gs-add-btn">
                + Añadir al carrito
              </button>
            </form>
          {% endif %}
        {% else %}
          <div class="wf-gs-oos-btn">Agotado</div>
        {% endif %}
      </div>
    {% endif %}

  </div>

  <div class="wf-card-info">
    <a class="product-loop-title" href="{{ product.url | within: collection }}">{{ product.title }}</a>
    <a href="{{ product.url | within: collection }}" class="product-loop-price">
      {% if on_sale %}
        <span class="visually-hidden">{{ 'products.general.regular_price' | t }}</span>
        <s><span class="money">{{ product.compare_at_price | money }}</span></s>
        {% if product.price_varies %}
          {% assign sale_price = product.price | money | prepend: '<span class="money">' | append: '</span>' %}
          {{ 'products.product.on_sale_from_html' | t: price: sale_price }}
        {% else %}
          <span class="money wf-price-sale">{{ product.price | money }}</span>
        {% endif %}
      {% else %}
        {% if product.price_varies %}
          {% assign price = product.price | money | prepend: '<span class="money">' | append: '</span>' %}
          {{ 'products.general.from_text_html' | t: price: price }}
        {% else %}
          <span class="money">{{ product.price | money }}</span>
        {% endif %}
      {% endif %}
    </a>
  </div>

  {% if settings.add_spr_markup %}
   <div class="spr-badge__wrap">
      <a href="{{ product.url | within: collection }}#shopify-product-reviews">
        <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
      </a>
    </div>
  {% endif %}
</div>

<script>
  /* Interceptor AJAX para los botones Gymshark */
  if (!window.wfGymsharkAjax) {
    window.wfGymsharkAjax = true;

    document.addEventListener('submit', function(e) {
      if (e.target.matches('.wf-gs-form')) {
        e.preventDefault(); // Evita la redirección a myshopify.com/cart
        
        var form = e.target;
        var btn = form.querySelector('button');
        var originalText = btn.innerText;

        // 1. Estado de carga visual
        btn.innerHTML = '<span style="opacity:0.5;">...</span>';
        btn.disabled = true;

        // 2. Enviar producto al carrito en segundo plano
        fetch('/cart/add.js', {
          method: 'POST',
          body: new FormData(form)
        })
        .then(function(res) { return res.json(); })
        .then(function(data) {
          // Mostrar éxito en el cuadrito
          btn.innerHTML = '✓';
          setTimeout(function() { 
            btn.innerText = originalText; 
            btn.disabled = false; 
          }, 2000);

          // 3. Actualizar la información del carrito usando tu archivo nativo ajax-cart.js
          if (window.ajaxCart) {
            window.ajaxCart.load();
          }

          // 4. Desplegar el sidebar automáticamente
          // Buscamos el icono del carrito en la barra de navegación y simulamos un clic
          var cartHeaderIcon = document.querySelector('a[href="/cart"], .js-drawer-open-right');
          if (cartHeaderIcon) {
            cartHeaderIcon.click();
          }
        })
        .catch(function(err) {
          btn.innerText = 'X';
          setTimeout(function() { 
            btn.innerText = originalText; 
            btn.disabled = false; 
          }, 2000);
        });
      }
    });
  }
</script>