/*============================================================================
  Global Reset & Base
==============================================================================*/
*, *::before, *::after {
  box-sizing: border-box;
}

body {
  background-color: var(--color-bg);
  color: var(--color-text-primary);
  font-family: $font-body-family;
  font-weight: $font-body-weight;
  width: 100%;
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transition: background-color var(--transition-slow), color var(--transition-slow);
}

#PageContainer {
  width: 100%;
  overflow: hidden;

  * { outline: none; }
  iframe { max-width: 100%; }
  .main-content {
    @media #{$medium-up} {
      min-height: calc(100vh - 360px);
    }
  }
}

h1, h2, h3, h4, h5, h6,
#cartSidebar .cart-sidebar-title,
.heading-font-weight, .section-title {
  font-family: $font-header-family;
  font-weight: $font-header-weight;
  font-style: $font-header-style;
  color: var(--color-heading);
}

hr {
  border-color: var(--color-border);
}

label {
  color: $color-label;
  text-align: left;
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.08em;
}

.rte {
  img { border-radius: var(--radius-lg); }
}

.callout {
  background-color: var(--color-surface);
  border-color: var(--color-border);
  color: var(--color-text-primary);
  border-radius: var(--radius-lg);
  backdrop-filter: blur(var(--blur-sm));
}

/*============================================================================
  Links & Buttons
==============================================================================*/
a, .pagination a {
  color: var(--color-link);
  transition: opacity var(--transition-fast);
  &:hover, &:focus { color: var(--color-link); opacity: 0.7; }
}

{% if link_style == 'colored' %}
  .rte a { color: $color-link; text-decoration: none; &:hover { color: $color-link; } }
{% elsif link_style == 'underline' %}
  .rte a { color: inherit; text-decoration: underline; &:hover { color: inherit; text-decoration: none; } }
{% else %}
  .rte a { color: $color-link; text-decoration: underline; &:hover { color: $color-link; text-decoration: none; } }
{% endif %}

/* --- Buttons: clean, bold, neutral --- */
.button {
  font-size: $button-text-size;
  font-weight: $button-text-weight;
  text-transform: $button-text-transform;
  letter-spacing: 0.07em;
  padding: .9em 2.25em .85em;
  border-radius: $button-radius;
  color: var(--sh-btn-text, #fff);
  background: var(--sh-btn-bg, #111);
  border: 2px solid transparent;
  transition: all var(--transition-base);
  position: relative;
  overflow: hidden;

  &::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(255,255,255,0);
    transition: background var(--transition-fast);
  }

  &:hover, &:focus {
    background: var(--sh-btn-bg, #111);
    opacity: 0.82;
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
  }

  &.hollow {
    background: transparent;
    border-color: var(--color-text-primary);
    color: var(--color-text-primary);
    &:hover {
      background: var(--color-text-primary);
      color: var(--color-bg);
      opacity: 1;
    }
  }

  &.white {
    background: rgba(255,255,255,0.95);
    color: #111;
    border-color: rgba(255,255,255,0.3);
    backdrop-filter: blur(var(--blur-sm));
    &:hover {
      background: #fff;
      color: #111;
      opacity: 1;
      transform: translateY(-1px);
    }
    &.hollow {
      background: rgba(255,255,255,0.12);
      border-color: rgba(255,255,255,0.7);
      color: #fff;
      backdrop-filter: blur(var(--blur-sm));
      &:hover {
        background: rgba(255,255,255,0.25);
        color: #fff;
        opacity: 1;
      }
    }
  }

  &.disabled {
    &:hover, &:focus { opacity: 0.25; transform: none; box-shadow: none; }
  }
}

.button.hollow, .search-bar .button {
  box-shadow: none;
  &:hover { box-shadow: none; }
}

.pagination .current {
  opacity: 0.5;
  color: inherit;
}

/*============================================================================
  Forms
==============================================================================*/
#PageContainer {
  [type=color], [type=date], [type=datetime-local], [type=datetime],
  [type=email], [type=month], [type=number], [type=password], [type=search],
  [type=tel], [type=text], [type=time], [type=url], [type=week], select, textarea {
    border-color: var(--color-border-strong);
    color: var(--color-text-primary);
    background-color: var(--color-surface);
    backdrop-filter: blur(var(--blur-sm));
    margin-bottom: 1.25rem;
    border-radius: var(--radius);
    transition: all var(--transition-fast);

    &::placeholder { color: var(--color-text-tertiary); }
    &:focus {
      border-color: var(--color-text-primary);
      background-color: var(--color-surface-hover);
      box-shadow: 0 0 0 3px rgba(0,0,0,0.08);
    }
  }
}

.newsletter__form-wrap {
  .form__input { border-radius: $border-radius 0 0 $border-radius; }
  .button { border-radius: 0 $border-radius $border-radius 0; }
}

/*============================================================================
  Lazy Loading
==============================================================================*/
.lazyload, .lazyloading { opacity: 0; }
.lazyloaded { opacity: 1; transition: opacity 400ms ease-in-out; }

/*============================================================================
  Liquid Glass Mixin Utility
==============================================================================*/
.glass-surface {
  background: var(--glass-bg);
  backdrop-filter: blur(var(--blur-md)) saturate(1.6);
  -webkit-backdrop-filter: blur(var(--blur-md)) saturate(1.6);
  border: 1px solid var(--glass-border);
  box-shadow: var(--glass-shadow);
  border-radius: var(--radius-xl);
}

/*============================================================================
  Mobile Menu Sidebar — Glass
==============================================================================*/
.off-canvas.is-closed { visibility: visible; }

#mobileMenuSidebar {
  background-color: var(--color-bg);
  backdrop-filter: blur(var(--blur-lg));
  -webkit-backdrop-filter: blur(var(--blur-lg));
  border-right: 1px solid var(--color-border);
  box-shadow: 4px 0 40px rgba(0,0,0,0.12);

  a { color: var(--color-text-primary); }

  .mobile-search { padding: 1.5rem 1.25rem 0.5rem; }

  .mobile-menu {
    > li {
      border-bottom: 1px solid var(--color-border);
      > a {
        font-size: $mobile-menu-link-size;
        font-weight: $mobile-menu-link-weight;
        text-transform: $mobile-menu-link-transform;
        letter-spacing: 0.06em;
        padding: 1.125rem 1.25rem;
      }
    }
    .submenu-toggle {
      &::after {
        border-color: var(--color-text-primary) transparent transparent;
        opacity: 0.6;
      }
    }
  }

  .search-bar .input-group-field {
    background-color: var(--color-surface);
    color: var(--color-text-primary);
    border-color: var(--color-border-strong);
    box-shadow: none;
    &::placeholder { color: var(--color-text-tertiary); opacity: 1; }
    &:focus { background-color: var(--color-surface-hover); }
  }

  .is-submenu-item a {
    font-size: $mobile-menu-dropdown-link-size;
    font-weight: $mobile-menu-dropdown-link-weight;
    text-transform: $mobile-menu-dropdown-link-transform;
  }

  .mobile-search .button {
    background: var(--color-accent);
    color: var(--color-accent-text);
    &:hover, &:focus { background: var(--color-accent-hover); }
  }
}

/*============================================================================
  Cart Sidebar — Glass
==============================================================================*/
#cartSidebar {
  background-color: var(--color-bg);
  backdrop-filter: blur(var(--blur-lg));
  -webkit-backdrop-filter: blur(var(--blur-lg));
  border-left: 1px solid var(--color-border);
  box-shadow: -4px 0 40px rgba(0,0,0,0.1);
  color: var(--color-text-primary);

  a {
    color: var(--color-text-primary);
    &.ajaxcart__product-name { color: var(--color-text-primary); }
  }

  .cart-sidebar-title {
    font-size: 1.125rem;
    font-weight: $font-header-weight;
    letter-spacing: 0.04em;
  }

  label { color: var(--color-text-secondary); opacity: 1; }

  .ajaxcart__product-image img { border-radius: var(--radius-lg); }

  .ajaxcart__qty-num {
    border: 1px solid var(--color-border-strong);
    color: var(--color-text-primary);
    background-color: var(--color-surface);
    border-radius: var(--radius);
  }

  .ajaxcart__qty-adjust {
    font-size: .875rem;
    color: var(--color-text-secondary);
    &:hover { color: var(--color-text-primary); }
  }

  .ajaxcart__qty { border-radius: $border-radius; }

  .cart__shipping-text { color: var(--color-text-secondary); }

  .button.cart__checkout {
    background: var(--color-accent);
    color: var(--color-accent-text);
    width: 100%;
    &:hover {
      background: var(--color-accent-hover);
      color: var(--color-accent-text);
      opacity: 1;
    }
  }

  .ajaxcart__product-name { margin: 2px 0; font-weight: 600; }
  .ajaxcart__product-meta { font-size: 0.8125rem; color: var(--color-text-secondary); }

  #CartSpecialInstructions {
    background: var(--color-surface);
    color: var(--color-text-primary);
    border-color: var(--color-border-strong);
  }

  .cart__subtotal-price {
    font-size: 1.125rem;
    font-weight: 700;
  }

  .cart__subtotal-price, .cart__product__price {
    color: var(--color-text-primary);
    font-weight: 600;
  }

  .cart__shipping-text { font-size: .8125rem; font-weight: normal; }

  .close-button {
    color: var(--color-text-tertiary);
    &:hover { color: var(--color-text-primary); }
  }

  .ajaxcart__row {
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 1rem;
    margin-bottom: 1rem;
    &:last-child { border-bottom: none; }
  }

  .additional-checkout-button+.additional-checkout-button { margin-left: 0; }
  .additional-checkout-button { width: 100%; margin-bottom: 0.75rem; }
}

/*============================================================================
  Header — Liquid Glass
==============================================================================*/
.announcement-bar {
  display: block;
  position: relative;
  font-size: $announcement-text-size;
  background: $color-announcement-bg;
  color: $color-announcement-text;
  transition: opacity 0.25s ease-in-out;
  letter-spacing: 0.03em;

  &.announcement_clickable:hover { opacity: 0.9; cursor: pointer; }

  .announcement__link {
    position: absolute;
    display: block;
    z-index: 9;
    width: 100%;
    height: 100%;
  }

  .announcement__text-wrap {
    display: flex;
    align-items: center;
    a { color: inherit; text-decoration: underline; &:hover { text-decoration: none; } }
  }

  .announcement__text {
    width: 100%;
    margin-top: 0.75rem;
    margin-bottom: 0.75rem;
  }

  p { line-height: 1.4; margin-bottom: 0; }
}

.header-container {
  background-color: var(--header-bg);
  backdrop-filter: blur(var(--blur-md)) saturate(1.5);
  -webkit-backdrop-filter: blur(var(--blur-md)) saturate(1.5);
  border-bottom: 1px solid var(--header-border);
  position: sticky;
  top: 0;
  z-index: 100;
  transition: background-color var(--transition-base), box-shadow var(--transition-base);

  &:hover {
    box-shadow: 0 2px 24px rgba(0,0,0,0.06);
  }
}

.header-container, .page-wrapper, .announcement-bar {
  transform: translate(0);
  transition: transform .3s ease;
  &.content_pushed-right { transform: translateX(300px); }
  &.content_pushed-left { transform: translateX(-300px); }
}

#main-header {
  > .row { min-height: $header-min-height; }

  .logo-wrap .header__title a {
    color: var(--header-text);
    font-size: 1.25rem;
    letter-spacing: -0.01em;
  }

  .header__cart-count {
    background-color: var(--color-accent);
    color: var(--color-accent-text);
  }

  .dropdown.menu>li.is-dropdown-submenu-parent>a:after {
    border-color: var(--header-text) transparent transparent;
  }

  .is-dropdown-submenu .is-dropdown-submenu-parent.opens-right>a:after {
    border-color: transparent transparent transparent var(--header-text);
  }
}

#primary-menu {
  > .menu-item > .menu-item-link {
    font-size: $header-link-size;
    font-weight: $header-link-weight;
    text-transform: $header-link-transform;
    letter-spacing: 0.06em;
  }
  .sub-menu a {
    font-size: $header-dropdown-link-size;
    font-weight: $header-dropdown-link-weight;
    text-transform: $header-dropdown-link-transform;
  }
}

#primary-menu, #header-right-menu {
  a { color: var(--header-text); }

  .is-dropdown-submenu {
    border-radius: var(--radius-lg);
    background: var(--glass-bg);
    backdrop-filter: blur(var(--blur-lg)) saturate(1.8);
    -webkit-backdrop-filter: blur(var(--blur-lg)) saturate(1.8);
    border: 1px solid var(--glass-border);
    box-shadow: var(--glass-shadow);
    padding: 0.5rem 0;
    min-width: 200px;

    a { color: var(--color-text-primary); }

    li {
      border-bottom: none;
      &:hover { background: var(--color-surface-hover); }
    }
  }

  .is-dropdown-submenu .is-dropdown-submenu-parent.opens-right > .is-dropdown-submenu {
    border-radius: 0 var(--radius-lg) var(--radius-lg) var(--radius-lg);
  }
}

#header-right-menu .menu-item_search { font-size: 18px; }

#user-icon, #cart-icon {
  width: 22px;
  fill: var(--header-text);
}

.burger-container #burger .bar { background-color: var(--header-text); }

/* Header overlay (over hero) */
.header-container.header-overlay {
  background-color: transparent;
  backdrop-filter: none;
  -webkit-backdrop-filter: none;
  border-bottom: 1px solid rgba(255,255,255,0.10);
  position: absolute;
  width: 100%;
  z-index: 10;
  box-shadow: none;

  #main-header {
    .logo-wrap .header__title a { color: $color-header-overlay-main-menu; }
    .header__cart-count { background-color: $color-header-overlay-cart-count-bg; }
    .dropdown.menu>li.is-dropdown-submenu-parent>a:after {
      border-color: $color-header-overlay-main-menu transparent transparent;
    }
  }

  #primary-menu, #header-right-menu {
    a { color: $color-header-overlay-main-menu; }
    .is-dropdown-submenu {
      background: $color-header-overlay-dropdown-bg;
      a { color: $color-header-overlay-dropdown-menu; }
    }
  }

  #user-icon, #cart-icon { fill: $color-header-overlay-main-menu; }
  .burger-container #burger .bar { background-color: $color-header-overlay-main-menu; }
}

/*============================================================================
  Hero Section
==============================================================================*/
.hero-section {
  background-color: $color-sections-bg;
  color: $color-sections-text;
  overflow: hidden;
  position: relative;

  &.hero-section_full-screen { min-height: 100vh; }

  .hero__title {
    font-size: 2.75rem;
    line-height: 1.05;
    margin-bottom: 1rem;
    letter-spacing: -0.025em;

    @media #{$medium-up} {
      font-size: 4rem;
    }

    @media #{$large-up} {
      font-size: 5rem;
    }
  }

  .hero__text {
    font-size: 1.0625rem;
    margin-bottom: 2rem;
    line-height: 1.6;
    opacity: 0.85;

    @media #{$medium-up} { font-size: 1.1875rem; }

    p { line-height: inherit; margin-bottom: 0; }
  }

  .hero__btns {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }
}

/* Glass card over hero content */
.hero-glass-card {
  display: inline-block;
  padding: 2.5rem 3rem;
  border-radius: var(--radius-xl);
  background: rgba(0, 0, 0, 0.28);
  backdrop-filter: blur(var(--glass-blur, 16px)) saturate(1.4);
  -webkit-backdrop-filter: blur(var(--glass-blur, 16px)) saturate(1.4);
  border: 1px solid rgba(255, 255, 255, 0.15);
  box-shadow: 0 12px 48px rgba(0,0,0,0.25), inset 0 1px 0 rgba(255,255,255,0.1);
  max-width: 100%;

  @media screen and (max-width: 46.87375em) {
    padding: 1.75rem 1.5rem;
  }
}

/* Video background */
.hero-video-bg {
  position: absolute;
  inset: 0;
  overflow: hidden;
  z-index: 0;
  pointer-events: none;
}

.hero-video-iframe {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100vw;
  height: 56.25vw; /* 16:9 */
  min-height: 100%;
  min-width: 177.78vh; /* 16:9 inverted */
  transform: translate(-50%, -50%);
  border: none;
}

.hero-video-poster {
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: center;
  z-index: -1;
}

.hero-has-video .content-section {
  z-index: 1;
}

/* Scroll indicator */
.hero-scroll-indicator {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: 5;
  width: 28px;
  height: 44px;
  border: 2px solid rgba(255,255,255,0.5);
  border-radius: 14px;
  display: flex;
  justify-content: center;
  padding-top: 7px;
}

.hero-scroll-dot {
  width: 4px;
  height: 8px;
  background: rgba(255,255,255,0.8);
  border-radius: 2px;
  animation: hero-scroll-anim 1.8s ease-in-out infinite;
}

@keyframes hero-scroll-anim {
  0%   { opacity: 1; transform: translateY(0); }
  60%  { opacity: 0; transform: translateY(14px); }
  100% { opacity: 0; transform: translateY(14px); }
}

/*============================================================================
  Page Header
==============================================================================*/
.page__header {
  background-color: $color-sections-bg;
  color: $color-sections-text;
  a { color: inherit; }
}

.page__header__title {
  color: $color-sections-text;
  font-size: $page-title-size-mobile;
  letter-spacing: -0.02em;
  @media #{$medium-up} { font-size: $page-title-size; }
  &.title-underline::after { background: $color-sections-text; }
}

.page__header__description {
  font-size: 18px;
  @media #{$medium-up} { font-size: 21px; }
}

/*============================================================================
  Footer
==============================================================================*/
#site-footer {
  background-color: $color-footer-bg;
  color: $color-footer-text;

  .widget__title {
    color: $color-footer-title;
    font-size: $footer-title-size;
    font-weight: $footer-title-weight;
    text-transform: $footer-title-transform;
    letter-spacing: 0.08em;
  }

  .footer-widgets, .footer-widgets p { font-size: $footer-text-size; }

  .footer__widget__text, .footer__widget__newsletter {
    p a { text-decoration: underline; &:hover { text-decoration: none; } }
  }

  .footer__copyright { font-size: 12px; opacity: 0.5; }

  .footer__menu li { display: inline-block; width: 49%; }

  a, .menu li a {
    color: $color-footer-link;
    &:hover { color: $color-footer-title; opacity: 1; }
  }

  .footer__copyright, .footer__copyright a { color: $color-copyright; }
  .footer__copyright a:hover { color: $color-footer-title; }

  .newsletter__form-wrap {
    .form__input {
      background-color: $color-footer-form-input-bg;
      color: $color-footer-form-input-text;
      border-color: $color-footer-form-input-border;
      box-shadow: none;
      &::placeholder { color: $color-footer-form-input-text; opacity: 0.5; }
      &:focus {
        background-color: rgba(255,255,255,0.12);
        border-color: rgba(255,255,255,0.3);
        box-shadow: none;
      }
    }
    .button, .button:active, .button:focus, .button:visited {
      background-color: $color-footer-form-btn-bg;
      color: $color-footer-form-btn-text;
      font-size: 14px;
      &:hover { background-color: darken(#fff, 8%); opacity: 1; }
    }
  }
}

/*============================================================================
  Sections
==============================================================================*/
.content-section {
  padding-top: 3rem;
  padding-bottom: 1.5rem;
}

.section-title {
  font-size: $section-title-size;
  font-weight: $font-header-weight;
  margin-bottom: 2rem;
  letter-spacing: -0.02em;
  @media #{$medium-up} { margin-bottom: 3rem; }
}

{% if settings.enable_headings_underline %}
  .section-title,
  .page__header__title.title-underline {
    &::after {
      content: '';
      display: block;
      margin: 1.25rem 0 0;
      width: 40px;
      height: 2px;
      opacity: 0.2;
    }
  }

  .section-title { &::after { background: var(--color-heading); } }

  .text-center {
    .section-title, &.section-title,
    .page__header__title.title-underline {
      &::after { margin: 1.25rem auto 0; }
    }
  }
{% endif %}

/*============================================================================
  Product Grid (Gymshark/YoungLA clean style)
==============================================================================*/
.product-loop-item {
  position: relative;
  margin-bottom: 2rem;
  transition: transform var(--transition-base);

  &:hover { transform: translateY(-2px); }

  .product-loop-image {
    display: block;
    margin-bottom: 0.875rem;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: var(--color-bg-alt);
    aspect-ratio: 3 / 4;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform var(--transition-slow);
    }
    &:hover img { transform: scale(1.04); }
  }

  .secondary-image-enabled {
    position: relative;
    .product-image_secondary {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background-size: cover;
      background-position: 50%;
      opacity: 0;
      transition: opacity 0.4s ease-in-out;
    }
    @media #{$large-up} {
      &:hover .product-image_secondary { opacity: 1; }
    }
  }

  .product-loop-title {
    color: var(--color-text-primary);
    font-size: $loop-product-title-size;
    font-weight: $loop-product-title-weight;
    text-transform: $loop-product-title-transform;
    display: block;
    margin-bottom: 4px;
    line-height: 1.25;
    letter-spacing: 0.01em;
  }

  .product-loop-price {
    color: var(--color-text-secondary);
    line-height: 1.25;
    s {
      font-weight: $loop-product-price-weight;
      color: inherit;
      opacity: 0.5;
    }
    span {
      font-size: $loop-product-price-size;
      font-weight: $loop-product-price-weight;
    }
  }

  .product-badge {
    border-radius: var(--radius) 0 var(--radius) 0;
    font-size: 11px;
    letter-spacing: 0.05em;
    padding: 0.4rem 0.7rem;
  }
}

/* Badges */
.product-badge {
  color: $color-badge-text;
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.06em;
  &.badge__sale { background-color: $color-badge-sale-bg; }
  &.badge__sold-out { background-color: $color-badge-sold-out-bg; }
}

.is-sold-out { display: block; font-weight: 700; color: var(--color-text-tertiary); }

/*============================================================================
  Featured Products Section
==============================================================================*/
.featured-products-section {
  padding: 4rem 0 3rem;

  .section-title-wrap {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: 2rem;

    .view-all-link {
      font-size: 13px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: var(--color-text-secondary);
      text-decoration: none;
      transition: color var(--transition-fast);
      &:hover { color: var(--color-text-primary); opacity: 1; }
    }
  }
}

/*============================================================================
  Collection Grid Items
==============================================================================*/
.collection-grid-item {
  color: $color-sections-text;

  .collection-image {
    height: 260px;
    background-color: $color-sections-bg;
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: transform var(--transition-base);
    &:hover { transform: scale(1.02); opacity: 1; }
  }

  .collection-desc {
    .collection__title {
      font-size: 1rem;
      font-weight: $font-header-weight;
      letter-spacing: 0.02em;
    }
    .collection__count { font-size: 14px; opacity: 0.65; }
  }
}

/*============================================================================
  Product Page
==============================================================================*/
.product-page {
  #ProductImages.images-lightbox a:hover { cursor: zoom-in; }

  .product__image__item, .product__thumb {
    img { border-radius: var(--radius-xl); }
  }

  .product-title {
    color: $color-product-title;
    text-transform: $product-title-transform;
    font-size: $product-title-size-mobile;
    letter-spacing: -0.02em;
    @media #{$medium-up} { font-size: $product-title-size; }
  }

  .product-vendor a {
    color: var(--color-text-secondary);
    display: block;
    font-weight: 600;
    font-size: 13px;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    margin: -0.5rem 0 1rem;
  }

  #ComparePrice, #ProductPrice {
    color: $color-product-price;
    font-size: $product-price-size;
    font-weight: $product-price-weight;
  }
  #ComparePrice { opacity: 0.45; }

  .product__variants__wrap label, label.quantity-selector {
    margin-bottom: 0.25rem;
  }

  #AddToCart {
    background-color: $color-product-buy-bg;
    color: $color-product-buy-text;
    width: 100%;
    font-size: 15px;
    padding: 1em 2em;
    letter-spacing: 0.08em;
    border-radius: var(--radius-lg);
    &:hover {
      background-color: darken($color-product-buy-bg, 10%);
      color: $color-product-buy-text;
      opacity: 1;
      transform: translateY(-1px);
    }
  }

  .product-description {
    color: $color-product-description;
    font-size: $product-description-size;
    line-height: 1.7;
  }
}

/*============================================================================
  Swatches
==============================================================================*/
.product-page {
  .swatch label {
    border: 2px solid var(--color-border-strong);
    border-radius: var(--radius);
  }
  .swatch .swatch-element__inner {
    background-color: var(--color-bg-alt);
    font-size: 12px;
    font-weight: normal;
    border-radius: var(--radius);
  }
  .swatch input:checked + label {
    border-color: $color-product-variant-active;
    color: var(--color-text-primary);
    .swatch-element__inner { font-weight: 700; }
  }
  .swatch .swatch-element.soldout label { opacity: 0.45; }
  .swatch.error { background-color: #fff0f0 !important; color: #333 !important; }
}

/*============================================================================
  Cart Page
==============================================================================*/
.cart-page {
  .page-title {
    text-align: center;
    font-size: $page-title-size-mobile;
    @media #{$medium-up} { font-size: $page-title-size; }
  }

  .cart-items__title {
    color: var(--color-text-primary);
    font-size: 1rem;
    font-weight: $font-header-weight;
  }

  .cart-info label { color: var(--color-text-primary); }

  table {
    background: transparent;
    border-radius: var(--radius-lg);
    overflow: hidden;

    thead {
      background: var(--color-surface);
      border: 1px solid var(--color-border);
      th { font-size: 11px; text-transform: uppercase; letter-spacing: 0.08em; }
    }

    tbody {
      background: transparent;
      td { border-bottom: 1px solid var(--color-border); }
    }
  }
}

/*============================================================================
  Blog
==============================================================================*/
.blog-header {
  background-color: $color-sections-bg;
  color: $color-sections-text;
  a { color: inherit; }
}

.blogroll {
  .blog-tags-nav {
    margin-bottom: 0.75rem;
    .blog-tags-nav__title {
      text-transform: uppercase;
      font-size: 11px;
      font-weight: 700;
      letter-spacing: 0.08em;
    }
    .menu {
      a { font-size: 14px; }
      .__active a { font-weight: 700; }
    }
  }

  .article-featured-img {
    border-radius: var(--radius-xl);
    background-color: var(--color-bg-alt);
    overflow: hidden;
    img { border-radius: var(--radius-xl); transition: transform var(--transition-slow); }
    &:hover img { transform: scale(1.03); }
  }

  .article-title {
    font-size: 1.125rem;
    letter-spacing: -0.015em;
    @media #{$medium-up} { font-size: 1.625rem; }
    a { color: var(--color-text-primary); }
  }

  .article-meta {
    font-size: 12px;
    color: var(--color-text-secondary);
    span, a { color: var(--color-text-secondary); }
  }

  .article-meta__item::after { background-color: var(--color-text-tertiary); }
}

/*============================================================================
  Dropdown Pane (Search etc.)
==============================================================================*/
.dropdown-pane {
  background: var(--glass-bg);
  backdrop-filter: blur(var(--blur-lg)) saturate(1.8);
  -webkit-backdrop-filter: blur(var(--blur-lg)) saturate(1.8);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-lg);
  box-shadow: var(--glass-shadow);
  color: var(--color-text-primary);
}

/*============================================================================
  Quantity Input
==============================================================================*/
.ajaxcart__qty, .js-qty {
  background: var(--color-surface);
  border: 1px solid var(--color-border-strong);
  border-radius: var(--radius);
  input {
    background: transparent;
    color: var(--color-text-primary);
  }
}

/*============================================================================
  Image sections
==============================================================================*/
.image-text-section .image-text__img img,
.video-section .video__cover,
.map__container {
  border-radius: var(--radius-xl);
}

.recent-posts-section {
  .post__image-wrap,
  .post__featured-img {
    height: 220px;
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: transform var(--transition-base);
    &:hover { transform: scale(1.02); }
  }
  .post__image-wrap { background: var(--color-bg-alt); }
  .recent-posts-item {
    .post__title a { color: inherit; }
    .post__tags {
      font-size: .8125rem;
      font-weight: $font-header-weight;
      margin-bottom: 0.125rem;
      text-transform: uppercase;
      letter-spacing: 0.06em;
    }
    .post__meta { font-size: .8125rem; opacity: 0.55; margin-bottom: 0.25rem; }
    .post__title {
      font-size: 1.125rem;
      font-weight: $font-header-weight;
      line-height: 1.25;
      margin-bottom: 0.25rem;
      letter-spacing: -0.01em;
    }
  }
}

/*============================================================================
  Newsletter
==============================================================================*/
.newsletter-section.content-section {
  .section-title { padding: 0; margin-bottom: 1.5rem; }
  .newsletter__description { margin-bottom: 1.5rem; }
  .newsletter__form-fields .button,
  .newsletter__form-fields .button:active,
  .newsletter__form-fields .button:focus,
  .newsletter__form-fields .button:visited,
  .newsletter__form-fields input { height: 3rem; }
}

/*============================================================================
  Transitions & Animation
==============================================================================*/
@media only screen {
  .js-animate-appear, .js-animate-appear-show { opacity: 0; }
}
.editor-page .js-animate-appear, .editor-page .js-animate-appear-show { opacity: 1; }

/*============================================================================
  Lightbox
==============================================================================*/
.blueimp-gallery {
  background: rgba(10,10,8,.96);
}
.blueimp-gallery>.title, .blueimp-gallery>.close {
  text-shadow: none;
  color: #f0f0ee;
  &:hover { color: #fff; }
}
.blueimp-gallery>.next, .blueimp-gallery>.prev {
  border-color: rgba(255,255,255,0.2);
  color: #f0f0ee;
  background: rgba(255,255,255,0.08);
  opacity: 1;
  border-radius: 50%;
  backdrop-filter: blur(8px);
  &:hover { color: #fff; border-color: rgba(255,255,255,0.6); }
}

/*============================================================================
  Utility
==============================================================================*/
.text-shadow__none { text-shadow: none; }
.text-shadow__soft { text-shadow: 0 2px 8px rgba(0,0,0,0.20); }
