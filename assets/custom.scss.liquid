}

/*============================================================================
  Customer / Account Pages
==============================================================================*/
.customer-page, .account-page {
  .page-title {
    font-size: $page-title-size-mobile;
    @media #{$medium-up} { font-size: $page-title-size; }
  }
}

.account-page {
  table.stack {
    @media screen and (max-width: 39.9375em) {
      tfoot { border-color: $light-border; tr { border-bottom-color: $light-border; } }
    }
  }
}

@media (prefers-color-scheme: dark) {
  .account-page table.stack {
    @media screen and (max-width: 39.9375em) {
      tfoot { border-color: $dark-border; tr { border-bottom-color: $dark-border; } }
    }
  }
}

/*============================================================================
  Dropdown Pane (search, misc)
==============================================================================*/
.dropdown-pane {
  background: $light-dropdown-bg;
  -webkit-backdrop-filter: blur($blur-lg) saturate(1.8);
  backdrop-filter: blur($blur-lg) saturate(1.8);
  border: 1px solid $light-glass-border;
  border-radius: $radius-lg;
  box-shadow: $light-glass-shadow;
  color: $light-text-primary;
}

@media (prefers-color-scheme: dark) {
  .dropdown-pane {
    background: $dark-dropdown-bg;
    border-color: $dark-glass-border;
    box-shadow: $dark-glass-shadow;
    color: $dark-text-primary;
  }
}

/*============================================================================
  Image / Media Sections
==============================================================================*/
.image-text-section .image-text__img img,
.video-section .video__cover,
.map__container { border-radius: $radius-xl; }

.recent-posts-section {
  .post__image-wrap, .post__featured-img {
    height: 220px;
    border-radius: $radius-xl;
    overflow: hidden;
    transition: $trans-base;
    &:hover { transform: scale(1.02); }
  }
  .post__image-wrap { background: $light-bg-alt; }
  .recent-posts-item {
    .post__title a { color: inherit; }
    .post__tags { font-size: .8125rem; font-weight: $font-header-weight; margin-bottom: 0.125rem; text-transform: uppercase; letter-spacing: 0.06em; }
    .post__meta { font-size: .8125rem; opacity: 0.55; margin-bottom: 0.25rem; }
    .post__title { font-size: 1.125rem; font-weight: $font-header-weight; line-height: 1.25; margin-bottom: 0.25rem; letter-spacing: -0.01em; }
  }
}

@media (prefers-color-scheme: dark) {
  .recent-posts-section .post__image-wrap { background: $dark-bg-alt; }
}

/*============================================================================
  Newsletter Section
==============================================================================*/
.newsletter-section.content-section {
  .section-title { padding: 0; margin-bottom: 1.5rem; }
  .newsletter__description { margin-bottom: 1.5rem; }
  .newsletter__form-fields .button,
  .newsletter__form-fields .button:active,
  .newsletter__form-fields .button:focus,
  .newsletter__form-fields .button:visited,
  .newsletter__form-fields input { height: 3rem; }
}

/*============================================================================
  Quantity Input
==============================================================================*/
.ajaxcart__qty, .js-qty {
  background: $light-bg-alt;
  border: 1px solid $light-border-strong;
  border-radius: $radius;
  input { background: transparent; color: $light-text-primary; }
}

@media (prefers-color-scheme: dark) {
  .ajaxcart__qty, .js-qty {
    background: $dark-surface;
    border-color: $dark-border-strong;
    input { color: $dark-text-primary; }
  }
}

/*============================================================================
  Animations
==============================================================================*/
@media only screen {
  .js-animate-appear, .js-animate-appear-show { opacity: 0; }
}
.editor-page .js-animate-appear, .editor-page .js-animate-appear-show { opacity: 1; }

/*============================================================================
  Lightbox
==============================================================================*/
.blueimp-gallery { background: rgba(10, 10, 8, 0.96); }
.blueimp-gallery>.title, .blueimp-gallery>.close {
  text-shadow: none;
  color: #f0f0ee;
  &:hover { color: #fff; }
}
.blueimp-gallery>.next, .blueimp-gallery>.prev {
  border-color: rgba(255, 255, 255, 0.18);
  color: #f0f0ee;
  background: rgba(255, 255, 255, 0.06);
  opacity: 1;
  border-radius: 50%;
  -webkit-backdrop-filter: blur(8px);
  backdrop-filter: blur(8px);
  &:hover { color: #fff; border-color: rgba(255, 255, 255, 0.55); }
}

/*============================================================================
  Utility
==============================================================================*/
.text-shadow__none { text-shadow: none; }
.text-shadow__soft  { text-shadow: 0 2px 8px rgba(0, 0, 0, 0.22); }
.text-shadow__medium { text-shadow: 0 2px 8px rgba(0, 0, 0, 0.42); }
.text-shadow__intense { text-shadow: 0 2px 8px rgba(0, 0, 0, 0.78); }
.text-shadow__soft .button, .text-shadow__soft button, .text-shadow__soft input,
.text-shadow__medium .button, .text-shadow__medium button, .text-shadow__medium input,
.text-shadow__intense .button, .text-shadow__intense button, .text-shadow__intense input { text-shadow: none; }

/*============================================================================
  Dark mode — global overrides for text elements that escape body color
==============================================================================*/
@media (prefers-color-scheme: dark) {
  // All uncolored text inherits from body (already dark-text-primary)
  // These specific elements override light-mode hardcoded values:
  .rte, .rte p, .rte h1, .rte h2, .rte h3, .rte h4, .rte h5, .rte h6 { color: $dark-text-secondary; }
  .tabs-content { color: $dark-text-secondary; }
  .page__header__description { color: $dark-text-secondary; }

  // Table & account pages
  table, tbody, tfoot, thead { border-color: $dark-border; background-color: $dark-bg-alt; }
  tfoot, thead, tfoot td, tfoot th, thead td, thead th { color: $dark-text-primary; background: $dark-surface; }
  tbody tr:nth-child(2n) { background-color: $dark-bg; }

  // Form elements not covered by the main dark block
  select { background-color: $dark-surface; color: $dark-text-primary; border-color: $dark-border-strong; }
  input[type="checkbox"], input[type="radio"] { accent-color: $dark-text-primary; }

  // Error / note callouts
  .note { background-color: $dark-surface; border-color: $dark-border-strong; color: $dark-text-secondary; }

  // Pagination
  .pagination a, .pagination button { color: $dark-text-primary; }
  .pagination .current { color: $dark-text-secondary; }
  .pagination .disabled { color: $dark-text-tertiary; }

  // Breadcrumbs
  .breadcrumbs li { color: $dark-text-secondary; }
  .breadcrumbs a { color: $dark-link; }
}
