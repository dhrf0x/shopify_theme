/* ╔═══════════════════════════════════════════════════════════════╗
   ║   WF URBAN MUSCLE — SISTEMA VISUAL v5.4                      ║
   ║   overflow:clip hero fix + Gymshark search overlay           ║
   ╚═══════════════════════════════════════════════════════════════╝ */

/* ─── FIX CRÍTICO: overflow:clip en PageContainer ────────────── */
/* overflow:hidden crea un scroll container → offset horizontal  */
/* overflow:clip NO crea scroll container → no offset            */
#PageContainer {
  overflow: clip !important;
  overflow-clip-margin: 0 !important;
}

/* ─── 1. BASE GLOBAL ─────────────────────────────────────────── */
html { overflow-x: hidden; scroll-behavior: smooth; }
body, #PageContainer, .page-wrapper {
  background-color: $color-sections-bg !important;
  color: $color-sections-text !important;
}
h1, h2, h3, h4, h5, h6,
.section-title, .section__title-style, .page-title {
  color: $color-sections-text !important;
}
.product-loop-item .product-loop-title,
.product-loop-item .product-loop-title a { color: $color-sections-text !important; }
.product-loop-item .product-loop-price span,
.product-loop-item .product-loop-price .money { color: $color-sections-text !important; }

/* ─── 2. HERO ────────────────────────────────────────────────── */
.hero-gs__title {
  color: #ffffff !important;
  text-shadow: 0 2px 20px rgba(0,0,0,0.85), 0 0 50px rgba(0,0,0,0.5) !important;
}
.hero-gs__text, .hero-gs__text p {
  color: rgba(255,255,255,0.92) !important;
  text-shadow: 0 1px 8px rgba(0,0,0,0.7) !important;
}
.hero-gs__btn { color: #ffffff !important; }
/* Gradiente para legibilidad */
.hero-section--gymshark::after {
  content: '';
  position: absolute;
  bottom: 0; left: 0; right: 0;
  height: 65%;
  background: linear-gradient(to top, rgba(0,0,0,0.82) 0%, rgba(0,0,0,0.1) 70%, transparent 100%);
  z-index: 3;
  pointer-events: none;
}
.hero-gs__content { z-index: 6; }

/* ─── 3. HEADER ──────────────────────────────────────────────── */
.header-container {
  position: relative;
  background-color: $color-sections-bg !important;
  border-bottom: 1px solid rgba(255,255,255,0.07) !important;
  box-shadow: 0 2px 20px rgba(0,0,0,0.35) !important;
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
}
/* Header scrolled — ligero efecto blur */
.header-container.is-scrolled {
  background-color: rgba(26, 27, 56, 0.96) !important;
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  box-shadow: 0 4px 30px rgba(0,0,0,0.5) !important;
}

/* Layout 3-columnas centrado */
.wf-header-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 1.5rem;
  min-height: 64px;
  max-width: 100%;
  gap: 1rem;
}
.wf-header__left,
.wf-header__right {
  flex: 1;
  display: flex;
  align-items: center;
}
.wf-header__right { justify-content: flex-end; }
.wf-header__center {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
}

/* Logo */
.logo-wrap { display: flex; align-items: center; }
.header__title a,
.header__title_img a { color: $color-sections-text !important; text-decoration: none; }
.header__title { font-size: 1.2rem; font-weight: 800; letter-spacing: 0.08em; text-transform: uppercase; margin: 0; }
.logo__img { display: block; transition: opacity 0.2s; }
.logo__img:hover { opacity: 0.8; }

/* Nav de género — desktop izquierda */
.wf-gender-nav {
  display: flex;
  align-items: center;
  gap: 0;
  height: 100%;
}
.wf-gender-nav__item {
  position: relative;
  height: 64px;
  display: flex;
  align-items: center;
}
.wf-gender-nav__link {
  display: flex;
  align-items: center;
  gap: 0.3rem;
  padding: 0 1rem;
  height: 100%;
  color: $color-sections-text !important;
  text-decoration: none !important;
  font-size: 0.8rem;
  font-weight: 600;
  letter-spacing: 0.07em;
  text-transform: uppercase;
  transition: opacity 0.2s;
  white-space: nowrap;
}
.wf-gender-nav__link:hover { opacity: 0.6; }
.wf-gender-nav__chevron {
  font-size: 0.6rem;
  opacity: 0.5;
  transition: transform 0.2s;
}
.wf-gender-nav__item:hover .wf-gender-nav__chevron { transform: rotate(180deg); }

/* Dropdown del género nav */
.wf-gender-nav__dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  min-width: 180px;
  background: $color-sections-bg;
  border: 1px solid rgba(255,255,255,0.1);
  border-radius: 8px;
  box-shadow: 0 16px 50px rgba(0,0,0,0.5);
  padding: 0.5rem 0;
  z-index: 200;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-6px);
  transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s;
  pointer-events: none;
}
.wf-gender-nav__item--has-dropdown:hover .wf-gender-nav__dropdown {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
  pointer-events: all;
}
.wf-gender-nav__dropdown-link {
  display: block;
  padding: 0.6rem 1.25rem;
  color: $color-sections-text !important;
  text-decoration: none !important;
  font-size: 0.8rem;
  font-weight: 500;
  letter-spacing: 0.04em;
  transition: background 0.15s, padding-left 0.15s;
}
.wf-gender-nav__dropdown-link:hover {
  background: rgba(255,255,255,0.07);
  padding-left: 1.5rem;
}

/* Search toggle */
.header__search-toggle {
  background: none !important;
  border: none !important;
  padding: 0.4rem !important;
  cursor: pointer !important;
  color: $color-sections-text !important;
  line-height: 1 !important;
  transition: opacity 0.2s !important;
  display: flex; align-items: center; justify-content: center;
  border-radius: 6px;
}
.header__search-toggle svg { stroke: $color-sections-text; }
.header__search-toggle:hover { opacity: 0.65 !important; }

/* Right menu icons */
#header-right-menu { display: flex; align-items: center; gap: 0.25rem; list-style: none; margin: 0; padding: 0; }
#header-right-menu .menu-item { display: flex; align-items: center; }
#header-right-menu svg, #main-header svg { fill: $color-sections-text !important; }
#header-right-menu a { color: $color-sections-text !important; }

/* Dropdowns Foundation (por si los usan) */
#main-header .is-dropdown-submenu {
  background-color: $color-sections-bg !important;
  border: 1px solid rgba(255,255,255,0.1) !important;
  border-radius: 6px !important;
  box-shadow: 0 12px 40px rgba(0,0,0,0.5) !important;
}
#main-header .is-dropdown-submenu a { color: $color-sections-text !important; }
#main-header .is-dropdown-submenu a:hover { background-color: rgba(255,255,255,0.07) !important; }

/* Scroll behavior */
@keyframes wf-header-in { from { transform: translateY(-100%); } to { transform: translateY(0); } }
.header-container { animation: wf-header-in 0.4s cubic-bezier(0.4, 0, 0.2, 1) both; }

/* ─── 4. SEARCH MODAL — tiempo real ─────────────────────────── */
/* Backdrop */
.wf-modal {
  position: fixed;
  inset: 0;
  z-index: 9998;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 80px;
  padding: 60px 1rem 1rem;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.22s ease;
}
.wf-modal.is-open {
  pointer-events: all;
  opacity: 1;
}
.wf-modal__backdrop {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.65);
  z-index: -1;
  backdrop-filter: blur(3px);
  -webkit-backdrop-filter: blur(3px);
}
body.wf-modal-open { overflow: hidden; }

/* Caja del modal */
.wf-modal__box {
  background: #1a1a2e;
  border: 1px solid rgba(255,255,255,0.1);
  border-radius: 12px;
  box-shadow: 0 24px 80px rgba(0,0,0,0.7), 0 0 0 1px rgba(255,255,255,0.04);
  width: 100%;
  max-width: 680px;
  max-height: calc(100vh - 80px);
  display: flex;
  flex-direction: column;
  overflow: hidden;
  transform: translateY(-12px) scale(0.98);
  transition: transform 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
}
.wf-modal.is-open .wf-modal__box {
  transform: translateY(0) scale(1);
}

/* Header del modal */
.wf-modal__header {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 1.25rem;
  border-bottom: 1px solid rgba(255,255,255,0.08);
  flex-shrink: 0;
}
.wf-modal__icon {
  color: rgba(255,255,255,0.4);
  flex-shrink: 0;
  display: flex;
  align-items: center;
}
.wf-modal__input {
  flex: 1;
  background: transparent !important;
  border: none !important;
  outline: none !important;
  box-shadow: none !important;
  color: #ffffff !important;
  font-size: 1.125rem !important;
  font-weight: 400 !important;
  padding: 0 !important;
  margin: 0 !important;
  line-height: 1.4 !important;
}
.wf-modal__input::placeholder {
  color: rgba(255,255,255,0.28) !important;
  font-weight: 300 !important;
}
.wf-modal__close {
  display: flex;
  align-items: center;
  gap: 0.35rem;
  background: rgba(255,255,255,0.07) !important;
  border: 1px solid rgba(255,255,255,0.12) !important;
  border-radius: 6px !important;
  color: rgba(255,255,255,0.5) !important;
  padding: 0.3rem 0.6rem !important;
  cursor: pointer !important;
  font-size: 0.65rem !important;
  font-weight: 700 !important;
  letter-spacing: 0.08em !important;
  text-transform: uppercase !important;
  transition: all 0.15s !important;
  flex-shrink: 0;
  line-height: 1 !important;
}
.wf-modal__close:hover {
  background: rgba(255,255,255,0.13) !important;
  color: #fff !important;
  border-color: rgba(255,255,255,0.25) !important;
}
.wf-modal__close svg { flex-shrink: 0; }

/* Resultados */
.wf-modal__results {
  overflow-y: auto;
  flex: 1;
  padding: 1rem 1.25rem;
  min-height: 80px;
}
.wf-modal__results::-webkit-scrollbar { width: 4px; }
.wf-modal__results::-webkit-scrollbar-track { background: transparent; }
.wf-modal__results::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.15); border-radius: 2px; }

.wf-modal__grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 0.875rem;
}
@media (max-width: 480px) {
  .wf-modal__grid { grid-template-columns: repeat(2, 1fr); }
}

/* Cards de producto */
.wf-card {
  display: flex;
  flex-direction: column;
  border-radius: 8px;
  overflow: hidden;
  background: rgba(255,255,255,0.04);
  border: 1px solid rgba(255,255,255,0.07);
