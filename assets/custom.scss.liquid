@media (prefers-color-scheme: dark) {
  .product-page {
    .product-vendor a { color: $dark-text-secondary; }
    .product-title { color: $dark-heading; }
    .product-description { color: $dark-text-secondary; }
    // Swatch + variant labels (Talla, Tejido, Grupo edad, etc.)
    label { color: $dark-text-primary; }
    .swatch label { border-color: $dark-border-strong; color: $dark-text-primary; }
    .swatch .swatch-element__inner { background-color: $dark-bg-alt; color: $dark-text-primary; }
    .swatch input:checked + label { color: $dark-text-primary; border-color: $dark-text-primary; }
    // Select dropdowns for variant selection
    select {
      background-color: $dark-surface;
      color: $dark-text-primary;
      border-color: $dark-border-strong;
    }
    // Quantity label
    label.quantity-selector { color: $dark-text-primary; }
    // Product tabs / descriptions
    .rte, .rte p, .rte li { color: $dark-text-secondary; }
    .tabs-content { color: $dark-text-secondary; }
  }
}

/*============================================================================
  Blog
==============================================================================*/
.blog-header { background-color: $color-sections-bg; color: $color-sections-text; a { color: inherit; } }

.blogroll {
  .blog-tags-nav {
    margin-bottom: 0.75rem;
    .blog-tags-nav__title { text-transform: uppercase; font-size: 11px; font-weight: 700; letter-spacing: 0.07em; }
