/*============================================================================
  Cart Page
==============================================================================*/
.cart-page {
  .page-title {
    text-align: center;
    font-size: $page-title-size-mobile;
    @media #{$medium-up} { font-size: $page-title-size; }
  }
  .cart-items__title { color: $light-text-primary; font-size: 1rem; font-weight: $font-header-weight; }
