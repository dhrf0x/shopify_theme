/*============================================================================
  Header — Glass
==============================================================================*/
.announcement-bar {
  display: block;
  position: relative;
  font-size: $announcement-text-size;
  background: $color-announcement-bg;
  color: $color-announcement-text;
  transition: opacity 0.25s ease-in-out;
  letter-spacing: 0.03em;
  &.announcement_clickable:hover { opacity: 0.9; cursor: pointer; }
  .announcement__link { position: absolute; display: block; z-index: 9; width: 100%; height: 100%; }
  .announcement__text-wrap {
    display: flex;
    align-items: center;
    a { color: inherit; text-decoration: underline; &:hover { text-decoration: none; } }
  }
  .announcement__text { width: 100%; margin-top: 0.75rem; margin-bottom: 0.75rem; }
  p { line-height: 1.4; margin-bottom: 0; }
}

.header-container {
  background-color: $light-header-bg;
  -webkit-backdrop-filter: blur($blur-md) saturate(1.5);
  backdrop-filter: blur($blur-md) saturate(1.5);
  border-bottom: 1px solid $light-header-border;
  position: sticky;
  top: 0;
  z-index: 100;
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
}

@media (prefers-color-scheme: dark) {
  .header-container {
    background-color: $dark-header-bg;
    border-bottom-color: $dark-header-border;
  }
}

.header-container, .page-wrapper, .announcement-bar {
  transform: translate(0);
  transition: transform .3s ease;
  &.content_pushed-right { transform: translateX(300px); }
  &.content_pushed-left { transform: translateX(-300px); }
}

#main-header {
  > .row { min-height: $header-min-height; }
  .logo-wrap .header__title a { color: $light-header-text; font-size: 1.25rem; letter-spacing: -0.01em; }
  .header__cart-count { background-color: $color-header-cart-count-bg; }
  .dropdown.menu>li.is-dropdown-submenu-parent>a:after { border-color: $light-header-text transparent transparent; }
  .is-dropdown-submenu .is-dropdown-submenu-parent.opens-right>a:after { border-color: transparent transparent transparent $light-header-text; }
}

@media (prefers-color-scheme: dark) {
  #main-header {
    .logo-wrap .header__title a { color: $dark-header-text; }
    .dropdown.menu>li.is-dropdown-submenu-parent>a:after { border-color: $dark-header-text transparent transparent; }
    .is-dropdown-submenu .is-dropdown-submenu-parent.opens-right>a:after { border-color: transparent transparent transparent $dark-header-text; }
  }
}

#primary-menu {
  > .menu-item > .menu-item-link {
    font-size: $header-link-size;
    font-weight: $header-link-weight;
    text-transform: $header-link-transform;
    letter-spacing: 0.06em;
  }
  .sub-menu a {
    font-size: $header-dropdown-link-size;
    font-weight: $header-dropdown-link-weight;
    text-transform: $header-dropdown-link-transform;
  }
}

#primary-menu, #header-right-menu {
  a { color: $light-header-text; }

  .is-dropdown-submenu {
    border-radius: $radius-lg;
    background: $light-dropdown-bg;
    -webkit-backdrop-filter: blur($blur-lg) saturate(1.8);
    backdrop-filter: blur($blur-lg) saturate(1.8);
    border: 1px solid $light-glass-border;
    box-shadow: $light-glass-shadow;
    padding: 0.5rem 0;
    min-width: 200px;
    a { color: $light-text-primary; }
    li { border-bottom: none; }
  }

  .is-dropdown-submenu .is-dropdown-submenu-parent.opens-right > .is-dropdown-submenu {
    border-radius: 0 $radius-lg $radius-lg $radius-lg;
  }
}

#header-right-menu .menu-item_search { font-size: 18px; }

#user-icon, #cart-icon { width: 22px; fill: $light-header-text; }
.burger-container #burger .bar { background-color: $light-header-text; }

@media (prefers-color-scheme: dark) {
  #primary-menu, #header-right-menu {
    a { color: $dark-header-text; }
    .is-dropdown-submenu {
      background: $dark-dropdown-bg;
      border-color: $dark-glass-border;
      box-shadow: $dark-glass-shadow;
      a { color: $dark-text-primary; }
    }
  }
  #user-icon, #cart-icon { fill: $dark-header-text; }
  .burger-container #burger .bar { background-color: $dark-header-text; }
  #main-header .logo-wrap .header__title a { color: $dark-header-text; }
}

// Overlay header (on top of hero)
.header-container.header-overlay {
  background-color: transparent;
  -webkit-backdrop-filter: none;
  backdrop-filter: none;
  border-bottom: 1px solid rgba(255, 255, 255, 0.10);
  position: absolute;
  width: 100%;
  z-index: 10;
  box-shadow: none;

  #main-header {
    .logo-wrap .header__title a { color: $color-header-overlay-main-menu; }
    .header__cart-count { background-color: $color-header-overlay-cart-count-bg; }
    .dropdown.menu>li.is-dropdown-submenu-parent>a:after { border-color: $color-header-overlay-main-menu transparent transparent; }
  }

  #primary-menu, #header-right-menu {
    a { color: $color-header-overlay-main-menu; }
    .is-dropdown-submenu {
      background: $color-header-overlay-dropdown-bg;
      a { color: $color-header-overlay-dropdown-menu; }
    }
  }

  #user-icon, #cart-icon { fill: $color-header-overlay-main-menu; }
  .burger-container #burger .bar { background-color: $color-header-overlay-main-menu; }
}

/*============================================================================
  Page Header
==============================================================================*/
.page__header {
  background-color: $color-sections-bg;
  color: $color-sections-text;
  a { color: inherit; }
}

.page__header__title {
  color: $color-sections-text;
  font-size: $page-title-size-mobile;
  letter-spacing: -0.02em;
  @media #{$medium-up} { font-size: $page-title-size; }
  &.title-underline::after { background: $color-sections-text; }
}

.page__header__description {
  font-size: 18px;
  @media #{$medium-up} { font-size: 21px; }
}

/*============================================================================
  Footer
==============================================================================*/
#site-footer {
  background-color: $color-footer-bg;
  color: $color-footer-text;

  .widget__title {
    color: $color-footer-title;
    font-size: $footer-title-size;
    font-weight: $footer-title-weight;
    text-transform: $footer-title-transform;
    letter-spacing: 0.08em;
  }

  .footer-widgets, .footer-widgets p { font-size: $footer-text-size; }
  .footer__widget__text, .footer__widget__newsletter {
    p a { text-decoration: underline; &:hover { text-decoration: none; } }
  }
  .footer__copyright { font-size: 12px; }
  .footer__menu li { display: inline-block; width: 49%; }
  a, .menu li a { color: $color-footer-link; &:hover { color: $color-footer-title; opacity: 1; } }
  .footer__copyright, .footer__copyright a { color: $color-copyright; }
  .footer__copyright a:hover { color: $color-footer-title; }

  .newsletter__form-wrap {
    .form__input {
      background-color: $color-footer-form-input-bg;
      color: $color-footer-form-input-text;
      border-color: $color-footer-form-input-border;
      box-shadow: none;
      &::placeholder { color: $color-footer-form-input-text; opacity: 0.5; }
      &:focus { background-color: rgba(255, 255, 255, 0.04); border-color: rgba(255, 255, 255, 0.28); box-shadow: none; }
    }
    .button, .button:active, .button:focus, .button:visited {
      background-color: $color-footer-form-btn-bg;
      color: $color-footer-form-btn-text;
      font-size: 14px;
      &:hover { opacity: 0.85; }
    }
  }
}

/*============================================================================
  Sections
==============================================================================*/
.content-section { padding-top: 3rem; padding-bottom: 1.5rem; }

.section-title {
  font-size: $section-title-size;
  font-weight: $font-header-weight;
  margin-bottom: 2rem;
  letter-spacing: -0.02em;
  color: $light-heading;
  @media #{$medium-up} { margin-bottom: 3rem; }
}

@media (prefers-color-scheme: dark) {
  .section-title { color: $dark-heading; }
}

{% if settings.enable_headings_underline %}
  .section-title,
  .page__header__title.title-underline {
    &::after {
      content: '';
      display: block;
      margin: 1.25rem 0 0;
      width: 40px;
      height: 2px;
      opacity: 0.18;
    }
  }
  .section-title { &::after { background: $light-heading; } }
  @media (prefers-color-scheme: dark) { .section-title { &::after { background: $dark-heading; } } }
  .text-center {
    .section-title, &.section-title, .page__header__title.title-underline { &::after { margin: 1.25rem auto 0; } }
  }
{% endif %}

// Hero section
.hero-section {
  background-color: $color-sections-bg;
  color: $color-sections-text;
  overflow: hidden;
  position: relative;
  isolation: isolate; // creates stacking context so z-index works reliably

  &.hero-section_full-screen { min-height: 100vh; }

  .hero__title {
    font-size: 2.5rem;
    line-height: 1.05;
    margin-bottom: 1rem;
    letter-spacing: -0.025em;
    @media #{$medium-up} { font-size: 3.75rem; }
    @media #{$large-up} { font-size: 4.75rem; }
  }

  .hero__text {
    font-size: 1.0625rem;
    margin-bottom: 2rem;
    line-height: 1.6;
    opacity: 0.85;
    @media #{$medium-up} { font-size: 1.1875rem; }
    p { line-height: inherit; margin-bottom: 0; }
  }

  .hero__btns {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }
}

// Glass card overlay on hero content
.hero-glass-card {
  display: inline-block;
  padding: 2.5rem 3rem;
  border-radius: $radius-xl;
  background: rgba(0, 0, 0, 0.28);
  -webkit-backdrop-filter: blur(16px) saturate(1.4);
  backdrop-filter: blur(16px) saturate(1.4);
  border: 1px solid rgba(255, 255, 255, 0.14);
  box-shadow: 0 12px 48px rgba(0, 0, 0, 0.25), inset 0 1px 0 rgba(255, 255, 255, 0.10);
  max-width: 100%;
  @media screen and (max-width: 46.87375em) { padding: 1.75rem 1.5rem; }
}

// Video background — covers full hero section
.hero-section {
  overflow: hidden; // contain the absolutely-positioned video
}

.hero-video-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 0;
  pointer-events: none;
  background: #000; // fallback while video loads
}

.hero-video-iframe {
  position: absolute;
  top: 50%;
  left: 50%;
  // Aspect-ratio trick: 16:9 → always wider/taller than container
  width: 100vw;
  height: 56.25vw; // 100vw ÷ 16 × 9
  min-height: 100vh;
  min-width: 177.78vh; // 100vh ÷ 9 × 16
  transform: translate(-50%, -50%);
  border: 0;
}

.hero-video-poster {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background-size: cover;
  background-position: center;
  z-index: -1;
}

.hero-has-video .content-section { z-index: 1; }

// Scroll indicator
.hero-scroll-indicator {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: 5;
  width: 28px;
  height: 44px;
  border: 2px solid rgba(255, 255, 255, 0.45);
  border-radius: 14px;
  display: flex;
  justify-content: center;
  padding-top: 7px;
}

.hero-scroll-dot {
  width: 4px;
  height: 8px;
  background: rgba(255, 255, 255, 0.75);
  border-radius: 2px;
  animation: hero-scroll-bounce 1.8s ease-in-out infinite;
}

@keyframes hero-scroll-bounce {
  0%   { opacity: 1; transform: translateY(0); }
  60%  { opacity: 0; transform: translateY(14px); }
  100% { opacity: 0; transform: translateY(14px); }
}

/*============================================================================
  Product Grid
==============================================================================*/
.product-loop-item {
  position: relative;
  margin-bottom: 2rem;
  transition: $trans-base;

  &:hover { transform: translateY(-2px); }

  .product-loop-image {
    display: block;
    margin-bottom: 0.875rem;
    border-radius: $radius-lg;
    overflow: hidden;
    background: $light-bg-alt;
    img { width: 100%; display: block; transition: transform 0.42s cubic-bezier(0.4, 0, 0.2, 1); }
    &:hover img { transform: scale(1.04); }
  }

  .secondary-image-enabled {
    position: relative;
    .product-image_secondary {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background-size: cover;
      background-position: 50%;
      opacity: 0;
      transition: opacity 0.4s ease-in-out;
    }
    @media #{$large-up} { &:hover .product-image_secondary { opacity: 1; } }
  }

  .product-loop-title {
    color: $color-collection-product-title;
    font-size: $loop-product-title-size;
    font-weight: $loop-product-title-weight;
    text-transform: $loop-product-title-transform;
    display: block;
    margin-bottom: 4px;
    line-height: 1.25;
  }

  .product-loop-price {
    color: $color-collection-product-price;
    line-height: 1.25;
    s { font-weight: $loop-product-price-weight; color: inherit; opacity: 0.5; }
    span { font-size: $loop-product-price-size; font-weight: $loop-product-price-weight; }
  }

  .product-badge { border-radius: $radius 0 $radius 0; font-size: 11px; letter-spacing: 0.05em; }
}

@media (prefers-color-scheme: dark) {
  .product-loop-item {
    .product-loop-image { background: $dark-bg-alt; }
    .product-loop-title { color: $dark-text-primary; }
    .product-loop-price { color: $dark-text-secondary; }
  }
}

.product-badge {
  color: $color-badge-text;
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.06em;
  &.badge__sale { background-color: $color-badge-sale-bg; }
  &.badge__sold-out { background-color: $color-badge-sold-out-bg; }
}

.is-sold-out { display: block; font-weight: 700; color: $color-badge-sold-out-bg; }

@media screen and (min-width: 64em) {
  .row.large-up-2 .product-loop-item,
  .row.large-up-3 .product-loop-item,
  .row.large-up-4 .product-loop-item { margin-bottom: 2.75rem; }
}

/*============================================================================
  Collection Grid Items
==============================================================================*/
.collection-grid-item {
  color: $color-sections-text;
  .collection-image {
    height: 260px;
    background-color: $color-sections-bg;
    border-radius: $radius-xl;
    overflow: hidden;
    transition: $trans-base;
    &:hover { transform: scale(1.02); opacity: 1; }
  }
  .collection-desc {
    .collection__title { font-size: 1rem; font-weight: $font-header-weight; letter-spacing: 0.02em; }
    .collection__count { font-size: 14px; opacity: 0.6; }
  }
}

@media screen and (min-width: 64em) {
  .row.large-up-2 .collection-grid-item,
  .row.large-up-3 .collection-grid-item,
  .row.large-up-4 .collection-grid-item { margin-bottom: 3rem; }
}

.collection-page {
  .collection-nav {
    .menu { a { font-size: 14px; } .__active a { font-weight: 700; } }
  }
}

.collection-nav__title, .blog-tags-nav__title {
  text-transform: uppercase;
  font-size: 11px;
  font-weight: 700;
  letter-spacing: 0.07em;
}

{% if settings.enable_headings_underline %}
  .collection-nav__title, .blog-tags-nav__title {
    &::after {
      content: '';
      display: block;
      margin: 0.875rem 0 0.125rem;
      width: 2.25rem;
      height: 2px;
      background: $light-heading;
      opacity: 0.15;
    }
  }
  @media (prefers-color-scheme: dark) {
    .collection-nav__title, .blog-tags-nav__title { &::after { background: $dark-heading; } }
  }
  .text-center {
    .collection-nav__title, .blog-tags-nav__title { &::after { margin: 0.875rem auto 0.125rem; } }
  }
{% endif %}

/*============================================================================
  Product Page
==============================================================================*/
.product-page {
  #ProductImages.images-lightbox a:hover { cursor: zoom-in; }

  .product__image__item, .product__thumb { img { border-radius: $radius-xl; } }

  .product-title {
    color: $color-product-title;
    text-transform: $product-title-transform;
    font-size: $product-title-size-mobile;
    letter-spacing: -0.02em;
    @media #{$medium-up} { font-size: $product-title-size; }
  }

  .product-vendor a {
    color: $light-text-secondary;
    display: block;
    font-weight: 600;
    font-size: 12px;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    margin: -0.5rem 0 1rem;
  }

  #ComparePrice, #ProductPrice {
    color: $color-product-price;
    font-size: $product-price-size;
    font-weight: $product-price-weight;
  }
  #ComparePrice { opacity: 0.45; }

  .product__variants__wrap label, label.quantity-selector { margin-bottom: 0.25rem; }

  #AddToCart {
    background-color: $color-product-buy-bg;
    color: $color-product-buy-text;
    display: block;
    margin: 1rem 0 2rem;
    font-size: 14px;
    letter-spacing: 0.08em;
    border-radius: $radius-lg;
    &:hover { background-color: rgba(0, 0, 0, 0.78); color: $color-product-buy-text; opacity: 1; transform: translateY(-1px); }
  }

  .product-description { color: $color-product-description; font-size: $product-description-size; line-height: 1.7; }

  .swatch label { border: 2px solid $light-border-strong; border-radius: $radius; }
  .swatch .swatch-element__inner { background-color: $light-bg-alt; font-size: 12px; font-weight: normal; border-radius: $radius; }
  .swatch input:checked + label { border-color: $color-product-variant-active; color: $light-text-primary; .swatch-element__inner { font-weight: 700; } }
  .swatch .swatch-element.soldout label { opacity: 0.45; }
