  font-size: 0.6rem;
  font-weight: 700;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  padding: 0.2rem 0.45rem;
  border-radius: 3px;
}
.wf-card__info {
  padding: 0.6rem 0.75rem 0.75rem;
}
.wf-card__title {
  font-size: 0.78rem;
  font-weight: 600;
