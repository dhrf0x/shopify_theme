/*============================================================================
  Base
==============================================================================*/
body {
  background-color: $light-bg;
  color: $light-text-primary;
  font-family: $font-body-family;
  font-weight: $font-body-weight;
  width: 100%;
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transition: $trans-slow;
}

@media (prefers-color-scheme: dark) {
  body {
    background-color: $dark-bg;
    color: $dark-text-primary;
  }
}

#PageContainer {
  width: 100%;
  overflow: hidden;
  * { outline: none; }
  iframe { max-width: 100%; }
  .main-content {
    @media #{$medium-up} {
      min-height: calc(100vh - 360px);
    }
  }
}

h1, h2, h3, h4, h5, h6,
#cartSidebar .cart-sidebar-title,
.heading-font-weight, .section-title {
  font-family: $font-header-family;
  font-weight: $font-header-weight;
  font-style: $font-header-style;
  color: $light-heading;
}

@media (prefers-color-scheme: dark) {
  h1, h2, h3, h4, h5, h6,
  #cartSidebar .cart-sidebar-title,
  .heading-font-weight, .section-title {
    color: $dark-heading;
  }
}

hr {
  border-color: $light-border;
  @media (prefers-color-scheme: dark) { border-color: $dark-border; }
}

label {
  color: $color-label;
  text-align: left;
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.07em;
}

@media (prefers-color-scheme: dark) {
  label {
    color: $dark-text-primary;
  }
  select {
    background-color: $dark-surface;
    color: $dark-text-primary;
    border-color: $dark-border-strong;
  }
  // General body copy in dark mode
  p, li, span, td, th, dt, dd {
    color: inherit;
  }
}

.rte img { border-radius: $radius-lg; }

.callout {
  background-color: $light-surface;
  border-color: $light-border;
  color: $light-text-primary;
  border-radius: $radius-lg;
  -webkit-backdrop-filter: blur($blur-sm);
  backdrop-filter: blur($blur-sm);
  @media (prefers-color-scheme: dark) {
    background-color: $dark-surface;
    border-color: $dark-border;
    color: $dark-text-primary;
  }
}

/*============================================================================
  Links & Buttons
==============================================================================*/
a, .pagination a {
  color: $light-link;
  transition: $trans-fast;
  &:hover, &:focus { color: $light-link; opacity: 0.7; }
}

@media (prefers-color-scheme: dark) {
  a, .pagination a {
    color: $dark-link;
    &:hover, &:focus { color: $dark-link; }
  }
}

{% if link_style == 'colored' %}
  .rte a { color: $color-link; text-decoration: none; &:hover { color: $color-link; } }
{% elsif link_style == 'underline' %}
  .rte a { color: inherit; text-decoration: underline; &:hover { color: inherit; text-decoration: none; } }
{% else %}
  .rte a { color: $color-link; text-decoration: underline; &:hover { color: $color-link; text-decoration: none; } }
{% endif %}

.button {
  font-size: $button-text-size;
  font-weight: $button-text-weight;
  text-transform: $button-text-transform;
  letter-spacing: 0.06em;
  padding: .9em 2.25em .85em;
  border-radius: $button-radius;
  color: $color-button-text;
  background: $color-button-bg;
  border: 2px solid transparent;
  transition: $trans-base;

  &:hover, &:focus {
    background: $color-button-bg;
    opacity: 0.82;
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  }

  &.hollow {
    background: transparent;
    border-color: $color-button-bg;
    color: $color-button-bg;
    &:hover {
      background: $color-button-bg;
      color: $color-button-text;
      opacity: 1;
    }
  }

  &.white {
    background: rgba(255, 255, 255, 0.92);
    color: #111;
    border-color: rgba(255, 255, 255, 0.25);
    -webkit-backdrop-filter: blur(8px);
    backdrop-filter: blur(8px);
    &:hover { background: #fff; color: #111; opacity: 1; transform: translateY(-1px); }

    &.hollow {
      background: rgba(255, 255, 255, 0.12);
      border-color: rgba(255, 255, 255, 0.65);
      color: #fff;
      &:hover { background: rgba(255, 255, 255, 0.22); color: #fff; opacity: 1; }
    }
  }

  &.disabled {
    &:hover, &:focus { opacity: 0.25; transform: none; box-shadow: none; }
  }
}

.button.hollow, .search-bar .button {
  box-shadow: none;
  &:hover { box-shadow: none; }
}

.pagination .current { opacity: 0.5; color: inherit; }

/*============================================================================
  Forms
==============================================================================*/
#PageContainer {
  [type=color], [type=date], [type=datetime-local], [type=datetime],
  [type=email], [type=month], [type=number], [type=password], [type=search],
  [type=tel], [type=text], [type=time], [type=url], [type=week], select, textarea {
    border-color: $color-field-border;
    color: $color-field-text;
    background-color: $color-field-bg;
    margin-bottom: 1.25rem;
    border-radius: $radius;
    transition: $trans-fast;
    &::placeholder { color: $color-field-placeholder; }
    &:focus {
      border-color: rgba(0, 0, 0, 0.28);
      box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.06);
    }
  }
}

@media (prefers-color-scheme: dark) {
  #PageContainer {
    [type=color], [type=date], [type=datetime-local], [type=datetime],
    [type=email], [type=month], [type=number], [type=password], [type=search],
    [type=tel], [type=text], [type=time], [type=url], [type=week], select, textarea {
      border-color: $dark-border-strong;
      color: $dark-text-primary;
      background-color: $dark-surface;
      &::placeholder { color: $dark-text-tertiary; }
      &:focus { border-color: $dark-text-primary; box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.06); }
    }
  }
}

.newsletter__form-wrap {
  .form__input { border-radius: $border-radius 0 0 $border-radius; }
  .button { border-radius: 0 $border-radius $border-radius 0; }
}

