.lazyloaded { opacity: 1; transition: opacity 400ms ease-in-out; }

/*============================================================================
  Mobile Menu Sidebar
==============================================================================*/
.off-canvas.is-closed { visibility: visible; }

#mobileMenuSidebar {
  background-color: $light-bg;
  border-right: 1px solid $light-border;
  box-shadow: 4px 0 40px rgba(0, 0, 0, 0.10);
  -webkit-backdrop-filter: blur($blur-lg);
  backdrop-filter: blur($blur-lg);

  a { color: $light-text-primary; }

  .mobile-search { padding: 1.5rem 1.25rem 0.5rem; }

  .mobile-menu {
    > li {
      border-bottom: 1px solid $light-border;
      > a {
        font-size: $mobile-menu-link-size;
        font-weight: $mobile-menu-link-weight;
        text-transform: $mobile-menu-link-transform;
        letter-spacing: 0.06em;
        padding: 1.125rem 1.25rem;
      }
    }
    .submenu-toggle::after {
      border-color: $light-text-primary transparent transparent;
      opacity: 0.6;
    }
  }

  .search-bar .input-group-field {
    background-color: $light-bg-alt;
    color: $light-text-primary;
    border-color: $light-border-strong;
    box-shadow: none;
    &::placeholder { color: $light-text-tertiary; opacity: 1; }
  }

  .is-submenu-item a {
    font-size: $mobile-menu-dropdown-link-size;
    font-weight: $mobile-menu-dropdown-link-weight;
    text-transform: $mobile-menu-dropdown-link-transform;
  }

  .mobile-search .button {
    background: $light-accent;
    color: $light-accent-text;
    &:hover, &:focus { background: $light-accent-hover; opacity: 1; }
  }
}

@media (prefers-color-scheme: dark) {
  #mobileMenuSidebar {
    background-color: $dark-bg-alt;
    border-right-color: $dark-border;
    box-shadow: 4px 0 40px rgba(0, 0, 0, 0.40);
    a { color: $dark-text-primary; }
    .mobile-menu {
      > li { border-bottom-color: $dark-border; }
      .submenu-toggle::after { border-color: $dark-text-primary transparent transparent; }
    }
    .search-bar .input-group-field {
      background-color: $dark-surface;
      color: $dark-text-primary;
      border-color: $dark-border-strong;
      &::placeholder { color: $dark-text-tertiary; }
    }
    .mobile-search .button { background: $dark-accent; color: $dark-accent-text; }
  }
}

/*============================================================================
  Cart Sidebar
==============================================================================*/
#cartSidebar {
  background-color: $light-bg;
  border-left: 1px solid $light-border;
  box-shadow: -4px 0 40px rgba(0, 0, 0, 0.08);
  color: $light-text-primary;

  a { color: $light-text-primary; &.ajaxcart__product-name { color: $light-text-primary; } }

  .cart-sidebar-title { font-size: 1.125rem; font-weight: $font-header-weight; letter-spacing: 0.04em; }
  label { color: $light-text-secondary; opacity: 1; }
  .ajaxcart__product-image img { border-radius: $radius-lg; }

  .ajaxcart__qty-num {
    border: 1px solid $light-border-strong;
    color: $light-text-primary;
    background-color: $light-bg-alt;
    border-radius: $radius;
  }

  .ajaxcart__qty-adjust { color: $light-text-secondary; &:hover { color: $light-text-primary; } }
  .ajaxcart__qty { border-radius: $border-radius; }
  .cart__shipping-text { color: $light-text-secondary; }

  .button.cart__checkout {
    background: $light-accent;
    color: $light-accent-text;
    width: 100%;
    &:hover { background: $light-accent-hover; color: $light-accent-text; opacity: 1; }
  }

  .ajaxcart__product-name { margin: 2px 0; font-weight: 600; }
  .ajaxcart__product-meta { font-size: 0.8125rem; color: $light-text-secondary; }
  #CartSpecialInstructions { background: $light-bg-alt; color: $light-text-primary; border-color: $light-border-strong; }
  .cart__subtotal-price { font-size: 1.125rem; font-weight: 700; color: $light-text-primary; }
  .cart__product__price { color: $light-text-primary; font-weight: 600; }
  .cart__shipping-text { font-size: .8125rem; font-weight: normal; }
  .close-button { color: $light-text-tertiary; &:hover { color: $light-text-primary; } }
