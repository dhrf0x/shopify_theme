.product-loop-item:hover .product-loop-image img.product-image_featured {
  transform: scale(1.06);
}

/* Overlay sutil al hacer hover */
.product-loop-item .product-loop-image::after {
  content: '';
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0);
  transition: background 0.3s ease;
  pointer-events: none;
  border-radius: 4px;
}
.product-loop-item:hover .product-loop-image::after {
  background: rgba(0,0,0,0.08);
}

/* Título y precio: fade-up sutil al hover */
.product-loop-item .product-loop-title,
.product-loop-item .product-loop-price {
  transition: opacity 0.2s ease;
}
.product-loop-item:hover .product-loop-title { opacity: 0.85; }

/* Page load fade-in */
@keyframes wf-fadein { from { opacity:0; transform:translateY(8px); } to { opacity:1; transform:translateY(0); } }
@keyframes wf-fadein-fast { from { opacity:0; } to { opacity:1; } }
.hero-section { animation: wf-fadein-fast 0.5s ease both; }
.content-section:not(.hero-section) { animation: wf-fadein 0.55s ease both; }

/* Stagger for product grids */
.column.column-block:nth-child(1) { animation-delay: 0.05s; }
.column.column-block:nth-child(2) { animation-delay: 0.10s; }
.column.column-block:nth-child(3) { animation-delay: 0.15s; }
.column.column-block:nth-child(4) { animation-delay: 0.20s; }

/* Buttons — global polish */
.button, button[type="submit"] {
  transition: background-color 0.2s ease, color 0.2s ease, border-color 0.2s ease, transform 0.1s ease, box-shadow 0.2s ease !important;
}
.button:active, button[type="submit"]:active { transform: scale(0.97) !important; }

/* Links */
a { transition: color 0.18s ease, opacity 0.18s ease; }

/* Focus rings — accesibilidad */
:focus-visible {
  outline: 2px solid rgba(255,255,255,0.6) !important;
  outline-offset: 2px !important;
  border-radius: 2px !important;
}

/* Scrollbar custom */
::-webkit-scrollbar { width: 5px; }
::-webkit-scrollbar-track { background: $color-sections-bg; }
::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.18); border-radius: 3px; transition: background 0.2s; }
::-webkit-scrollbar-thumb:hover { background: rgba(255,255,255,0.36); }

/* Text selection */
::selection { background-color: rgba(255,255,255,0.18); color: #fff; }

/* Smooth images */
img { transition: opacity 0.3s ease; }
img[loading] { opacity: 0; }
img.lazyloaded, img:not([loading]) { opacity: 1; }

/* Section entrance — IntersectionObserver fallback */
.js-animate-appear-show { animation: wf-fadein 0.6s ease both; }

/* Reduce motion for accessibility */
@media (prefers-reduced-motion: reduce) {
  *, *::before, *::after {
    animation-duration: 0.01ms !important;
    transition-duration: 0.01ms !important;
  }
}

