    url('icons.woff') format('woff'),
    url('icons.svg#icons') format('svg');
  font-weight: normal;
  font-style: normal;
}

.icon {
  font-family: 'icons' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

