/*============================================================================
  Design System: CSS Custom Properties (Light / Dark via prefers-color-scheme)
==============================================================================*/
:root {
  /* --- Light Mode Palette --- */
  --color-bg:              #f8f8f6;
  --color-bg-alt:          #f0f0ee;
  --color-surface:         rgba(255, 255, 255, 0.72);
  --color-surface-hover:   rgba(255, 255, 255, 0.88);
  --color-border:          rgba(0, 0, 0, 0.08);
  --color-border-strong:   rgba(0, 0, 0, 0.14);

  --color-text-primary:    #111110;
  --color-text-secondary:  #6b6b68;
  --color-text-tertiary:   #a0a09d;
  --color-text-inverse:    #ffffff;

  --color-heading:         #0e0e0c;

  --color-accent:          #111110;
  --color-accent-hover:    #333330;
  --color-accent-text:     #ffffff;

  --color-link:            #111110;

  /* Glass effect */
  --glass-bg:              rgba(255, 255, 255, 0.55);
  --glass-bg-dark:         rgba(0, 0, 0, 0.35);
  --glass-border:          rgba(255, 255, 255, 0.45);
  --glass-border-dark:     rgba(255, 255, 255, 0.12);
  --glass-shadow:          0 8px 32px rgba(0, 0, 0, 0.10), inset 0 1px 0 rgba(255,255,255,0.6);
  --glass-shadow-dark:     0 8px 32px rgba(0, 0, 0, 0.45), inset 0 1px 0 rgba(255,255,255,0.08);

  /* UI */
  --header-bg:             rgba(248, 248, 246, 0.82);
  --header-text:           #111110;
  --header-border:         rgba(0, 0, 0, 0.06);
  --footer-bg:             #111110;
  --footer-text:           rgba(255, 255, 255, 0.75);
  --footer-heading:        #ffffff;

  --color-badge-sale:      #111110;
  --color-badge-text:      #ffffff;
  --color-badge-sold:      #a0a09d;

  --radius:                6px;
  --radius-lg:             12px;
  --radius-xl:             20px;
  --blur-sm:               8px;
  --blur-md:               16px;
  --blur-lg:               28px;

  --transition-fast:       0.18s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base:       0.28s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow:       0.42s cubic-bezier(0.4, 0, 0.2, 1);

  /* Shopify theme vars passed in */
  --sh-btn-bg:             {{ settings.color_btn_bg | default: '#111110' }};
  --sh-btn-text:           {{ settings.color_btn_text | default: '#ffffff' }};
}

@media (prefers-color-scheme: dark) {
  :root {
    --color-bg:              #111110;
    --color-bg-alt:          #1a1a18;
    --color-surface:         rgba(30, 30, 28, 0.78);
    --color-surface-hover:   rgba(40, 40, 38, 0.90);
    --color-border:          rgba(255, 255, 255, 0.08);
    --color-border-strong:   rgba(255, 255, 255, 0.14);

    --color-text-primary:    #f0f0ee;
    --color-text-secondary:  #9a9a96;
    --color-text-tertiary:   #6b6b68;
    --color-text-inverse:    #111110;

    --color-heading:         #f5f5f3;

    --color-accent:          #f0f0ee;
    --color-accent-hover:    #d0d0cc;
    --color-accent-text:     #111110;

    --color-link:            #d0d0cc;

    --glass-bg:              rgba(20, 20, 18, 0.62);
    --glass-border:          rgba(255, 255, 255, 0.10);
    --glass-shadow:          0 8px 32px rgba(0, 0, 0, 0.5), inset 0 1px 0 rgba(255,255,255,0.06);

    --header-bg:             rgba(14, 14, 12, 0.85);
    --header-text:           #f0f0ee;
    --header-border:         rgba(255, 255, 255, 0.06);
    --footer-bg:             #0a0a08;
    --footer-text:           rgba(255, 255, 255, 0.60);
    --footer-heading:        rgba(255, 255, 255, 0.90);

    --color-badge-sale:      #f0f0ee;
    --color-badge-text:      #111110;
    --color-badge-sold:      #4a4a48;
  }
}

