/*============================================================================
  Body
==============================================================================*/
body {
  background-color: $color-body-bg;
  color: $color-body-text;
  font-family: $font-body-family;
  font-weight: $font-body-weight;
  width: 100%;
  overflow-x: hidden;
}

#PageContainer {
  width: 100%;
  overflow: hidden;
}

h1, h2, h3, h4, h5, h6,
#cartSidebar .cart-sidebar-title,
.heading-font-weight, .section-title {
  font-family: $font-header-family;
  font-weight: $font-header-weight;
  font-style: $font-header-style;
}
h1, h2, h3, h4, h5, h6,
.section-title {
  color: $color-body-title;
}

hr {
  border-color: $color-border;
}

label {
  color: $color-label;
  text-align: left;
  font-size: 12px;
  font-weight: bold;
  text-transform: uppercase;
}

.rte {
  img {
    border-radius: $border-radius;
  }
}

#PageContainer {
  * {
    outline: none;
  }
  iframe {
    max-width: 100%;
  }
  .main-content {
    @media #{$medium-up} {
      min-height: calc(100vh - 360px);
    }
  }
}

.callout { background-color: darken($color-body-bg, 2%); }

/*============================================================================
  Links & Buttons
==============================================================================*/
a, .pagination a {
  color: $color-link;
  transition: all 0.2s ease-in-out;
  &:hover, &:focus { color: $color-link; }
}

{% if link_style == 'colored' %}
  .rte a {
    color: $color-link;
    text-decoration: none;
    &:hover {
      color: $color-link;
    }
  }
{% elsif link_style == 'underline' %}
  .rte a {
    color: inherit;
    text-decoration: underline;
    &:hover {
      color: inherit;
      text-decoration: none;
    }
  }
{% else %}
  .rte a {
    color: $color-link;
    text-decoration: underline;
    &:hover {
      color: $color-link;
      text-decoration: none;
    }
  }
{% endif %}

.button {
  font-size: $button-text-size;
  font-weight: $button-text-weight;
  text-transform: $button-text-transform;
  padding: .85em 2.125em .8em;
  border-radius: $button-radius;
  color: $color-button-text;
  background: $color-button-bg;
  transition: all 0.2s ease-in-out;
  &:hover, &:focus {
    background: darken($color-button-bg, 10%);
    opacity: 1;
  }
  &.hollow {
    border-color: $color-button-bg;
    color: $color-button-bg;
    &:hover {
      opacity: 1;
      border-color: darken($color-button-bg,10%);
      color: $color-button-bg;
    }
  }
  &.white {
    background: #fff;
    color: #111;
    &:hover {
      color: #111;
      background: darken(#fff, 10%);
    }
    &.hollow {
      border-color: #fff;
      color: #fff;
      &:hover {
        color: #fff;
        border-color: darken(#fff, 10%);
      }
    }
  }
  &.disabled {
    &:hover, &:focus {
      opacity: 0.25;
    }
  }
}

.button.hollow, .search-bar .button {
  box-shadow: none;
  &:hover { box-shadow: none; }
}

.pagination .current {
  opacity: 0.5;
  color: inherit;
}

/*============================================================================
  Forms Styles
==============================================================================*/
#PageContainer {
  [type=color], [type=date], [type=datetime-local], [type=datetime],
  [type=email], [type=month], [type=number], [type=password], [type=search],
  [type=tel], [type=text], [type=time], [type=url], [type=week], select, textarea {
    border-color: $color-field-border;
    color: $color-field-text;
    background-color: $color-field-bg;
    margin-bottom: 1.25rem;
    &::placeholder {
      color: $color-field-placeholder;
    }
    &:focus {
      border-color: darken($color-field-border, 7%);
    }
  }
}

.newsletter__form-wrap {
  .form__input {
    border-radius: $border-radius 0 0 $border-radius;
  }
  .button {
    border-radius: 0 $border-radius $border-radius 0;
  }
}

/*============================================================================
  Content Appearance
==============================================================================*/
.product__variants_no-js {
  display: none;
}

.lazyload, .lazyloading {
	opacity: 0;
}
.lazyloaded {
	opacity: 1;
	transition: opacity 300ms ease-in-out;
}

/*============================================================================
  Mobile Menu Sidebar
==============================================================================*/
.off-canvas.is-closed {
  visibility: visible;
}
#mobileMenuSidebar {
  background-color: $color-mobile-sidebar-bg;
  border-right: 1px solid darken($color-mobile-sidebar-bg, 4%);
  a {
    color: $color-mobile-sidebar-link;
  }
  .mobile-search {
    padding: 1.5rem 1.25rem 0.5rem;
  }
  .mobile-menu {
    > li {
      border-bottom: none;
      > a {
        font-size: $mobile-menu-link-size;
        font-weight: $mobile-menu-link-weight;
        text-transform: $mobile-menu-link-transform;
        padding: 1.25rem;
      }
    }
    .submenu-toggle {
      &::after {
        border-color: $color-mobile-sidebar-link transparent transparent;
        opacity: 0.7;
      }
    }
  }
  .search-bar .input-group-field {
    background-color: $color-mobile-sidebar-input-bg;
    color: $color-mobile-sidebar-input-text;
    border-color: $color-mobile-sidebar-input-border;
    box-shadow: none;
    &::placeholder {
      color: $color-mobile-sidebar-input-text;
      opacity: 0.5;
    }
    &:focus {
      background-color: lighten($color-mobile-sidebar-input-bg, 3%);
      border-color: lighten($color-mobile-sidebar-input-border, 3%);
      box-shadow: none;
    }
  }
  .is-submenu-item a {
    font-size: $mobile-menu-dropdown-link-size;
    font-weight: $mobile-menu-dropdown-link-weight;
    text-transform: $mobile-menu-dropdown-link-transform;
  }
  .mobile-search .button {
    background: $color-mobile-sidebar-btn-bg;
    &:hover, &:focus {
      background: darken($color-mobile-sidebar-btn-bg, 10%);
    }
  }
  .social-media-links {
    a {
      font-size: 1.5rem;
    }
  }
}

/*============================================================================
  Cart Sidebar
==============================================================================*/
#cartSidebar {
  background-color: $color-cart-sidebar-bg;
  border-left: 1px solid darken($color-cart-sidebar-bg, 4%);
  color: $color-cart-sidebar-text;
  a {
    color: $color-cart-sidebar-text;
    &.ajaxcart__product-name { color: $color-cart-sidebar-product; }
  }
  .cart-sidebar-title {
    font-size: 1.1875rem;
    font-weight: $font-header-weight;
  }
  label {
    color: $color-cart-sidebar-text;
    opacity: 0.5;
  }
  .ajaxcart__product-image img {
    border-radius: $border-radius;
  }
  .ajaxcart__qty-num {
    border: 0;
    color: $color-cart-sidebar-text;
    background-color: darken($color-cart-sidebar-bg, 5%);
    &:focus { background-color: darken($color-cart-sidebar-bg, 2%); }
  }
  .ajaxcart__qty-adjust {
    font-size: .8125rem;
    color: $color-cart-sidebar-text;
    &:hover { color: lighten($color-cart-sidebar-text, 4%);}
  }
  .ajaxcart__qty {
    border-radius: $border-radius;
  }
  .cart__shipping-text { color: $color-cart-sidebar-text; }
  .button.cart__checkout {
    background: $color-cart-sidebar-checkout-btn-bg;
    color: $color-cart-sidebar-checkout-btn-text;
    &:hover { background: darken($color-cart-sidebar-checkout-btn-bg, 10%); color: $color-cart-sidebar-checkout-btn-text; }
  }
  .ajaxcart__product-name {
    margin: 2px 0;
    font-weight: bold;
  }
  .ajaxcart__product-meta {
    font-size: 0.875rem;
  }
  #CartSpecialInstructions {
    background: lighten($color-cart-sidebar-bg, 4%);
    color: $color-cart-sidebar-text;
    border-color: darken($color-cart-sidebar-bg, 8%);
  }
  .cart__subtotal-price {
    font-size: 1.125rem;
    font-weight: bold;
  }
  .cart__subtotal-price, .cart__product__price {
    color: $color-cart-sidebar-price;
    font-weight: bold;
  }
  .cart__shipping-text {
    font-size: .8125rem;
    font-weight: normal;
  }
  .close-button { color: lighten($color-cart-sidebar-text, 34%); }
  .ajaxcart__row { border-bottom: 0; }
  .additional-checkout-button+.additional-checkout-button {
    margin-left: 0;
  }
  .additional-checkout-button {
    width: 100%;
    margin-bottom: 1rem;
  }
}

/*============================================================================
  Header
==============================================================================*/
.announcement-bar {
  display: block;
  position: relative;
  font-size: $announcement-text-size;
  background: $color-announcement-bg;
  color: $color-announcement-text;
  transition: opacity 0.25s ease-in-out;
  &.announcement_clickable:hover {
    opacity: 0.9;
    cursor: pointer;
  }
  .announcement__link {
    position: absolute;
    display: block;
    z-index: 9;
    width: 100%;
    height: 100%;
  }
  .announcement__text-wrap {
    display: flex;
    align-items: center;
    a {
      color: inherit;
      text-decoration: underline;
      &:hover {
        text-decoration: none;
      }
    }
  }
  .announcement__text {
    width: 100%;
    margin-top: 0.875rem;
    margin-bottom: 0.875rem;
  }
  p {
    line-height: 1.4;
    margin-bottom: 0;
  }
}

.header-container {
  background-color: $color-header-bg;
}

.header-container, .page-wrapper, .announcement-bar {
  transform: translate(0);
  transition: transform .3s ease;
  &.content_pushed-right {
    transform: translateX(300px);
  }
  &.content_pushed-left {
    transform: translateX(-300px);
  }
}

#main-header {
  > .row { min-height: $header-min-height; }
  .logo-wrap .header__title a { color: $color-header-main-menu; }
  .header__cart-count { background-color: $color-header-cart-count-bg; }
  .dropdown.menu>li.is-dropdown-submenu-parent>a:after {
    border-color: $color-header-main-menu transparent transparent;
  }
  .is-dropdown-submenu .is-dropdown-submenu-parent.opens-right>a:after { border-color: transparent transparent transparent $color-header-dropdown-menu; }
}

#primary-menu {
  > .menu-item > .menu-item-link {
    font-size: $header-link-size;
    font-weight: $header-link-weight;
    text-transform: $header-link-transform;
  }
  .sub-menu a {
    font-size: $header-dropdown-link-size;
    font-weight: $header-dropdown-link-weight;
    text-transform: $header-dropdown-link-transform;
  }
}

#primary-menu, #header-right-menu {
  a { color: $color-header-main-menu; }
  .is-dropdown-submenu {
    border-radius: $border-radius;
    background-color: $color-header-dropdown-bg;
    a {
      color: $color-header-dropdown-menu;
    }
  }
  .is-dropdown-submenu .is-dropdown-submenu-parent.opens-right > .is-dropdown-submenu {
    border-radius: 0 $border-radius $border-radius 0;
  }
  .is-dropdown-submenu .is-dropdown-submenu-parent.opens-left > .is-dropdown-submenu {
    border-radius: $border-radius 0 0 $border-radius;
  }
}

#header-right-menu {
  .menu-item_search {
    font-size: 18px;
  }
}

#user-icon, #cart-icon {
  width: 22px;
  fill: $color-header-main-menu;
}

.burger-container #burger .bar {
  background-color: $color-header-main-menu;
}

.header-container.header-overlay {
  background-color: transparent;
  position: absolute;
  width: 100%;
  z-index: 10;
  #main-header {
    .logo-wrap .header__title a { color: $color-header-overlay-main-menu; }
    .header__cart-count { background-color: $color-header-overlay-cart-count-bg; }
    .dropdown.menu>li.is-dropdown-submenu-parent>a:after { border-color: $color-header-overlay-main-menu transparent transparent; }
    .is-dropdown-submenu .is-dropdown-submenu-parent.opens-right>a:after { border-color: transparent transparent transparent $color-header-overlay-dropdown-menu; }
  }
  #primary-menu, #header-right-menu {
    a { color: $color-header-overlay-main-menu; }
    .is-dropdown-submenu {
      background-color: $color-header-overlay-dropdown-bg;
      a {
        color: $color-header-overlay-dropdown-menu;
      }
    }
  }
  #user-icon, #cart-icon {
    width: 22px;
    fill: $color-header-overlay-main-menu;
  }
  .burger-container #burger .bar {
    background-color: $color-header-overlay-main-menu;
  }
}

/*============================================================================
  Page Header
==============================================================================*/
.page__header {
  background-color: $color-sections-bg;
  color: $color-sections-text;
  a {
    color: inherit;
  }
}

.page__header__title {
  color: $color-sections-text;
  font-size: $page-title-size-mobile;
  @media #{$medium-up} {
    font-size: $page-title-size;
  }
  &.title-underline::after {
    background: $color-sections-text;
  }
}

.page__header__description {
  font-size: 18px;
  @media #{$medium-up} {
    font-size: 21px;
  }
}

/*============================================================================
  Footer
==============================================================================*/
#site-footer {
  background-color: $color-footer-bg;
  color: $color-footer-text;
  .widget__title {
    color: $color-footer-title;
    font-size: $footer-title-size;
    font-weight: $footer-title-weight;
    text-transform: $footer-title-transform;
  }
  .footer-widgets, .footer-widgets p {
    font-size: $footer-text-size;
  }
  .footer__widget__text, .footer__widget__newsletter {
    p a {
      text-decoration: underline;
      &:hover {
        text-decoration: none;
      }
    }
  }
  .footer__copyright {
    font-size: 13px;
  }
  .footer__menu li {
    display: inline-block;
    width: 49%;
  }
  a, .menu li a {
    color: $color-footer-link;
    &:hover { color: $color-footer-title; }
  }
  .footer__copyright, .footer__copyright a { color: $color-copyright; }
  .footer__copyright a:hover { color: $color-footer-title;}
  .newsletter__form-wrap {
    .form__input {
      background-color: $color-footer-form-input-bg;
      color: $color-footer-form-input-text;
      border-color: $color-footer-form-input-border;
      box-shadow: none;
      &::placeholder {
        color: $color-footer-form-input-text;
        opacity: 0.5;
      }
      &:focus {
        background-color: lighten($color-footer-form-input-bg, 3%);
        border-color: lighten($color-footer-form-input-border, 3%);
        box-shadow: none;
      }
    }
    .button, .button:active, .button:focus, .button:visited {
      background-color: $color-footer-form-btn-bg;
      color: $color-footer-form-btn-text;
      font-size: 15px;
      &:hover {
        background-color: darken($color-footer-form-btn-bg, 10);
      }
    }
  }
}

/*============================================================================
  Sections
==============================================================================*/
.content-section {
  padding-top: 3rem;
  padding-bottom: 1.5rem;
}

.section-title {
  font-size: $section-title-size;
  font-weight: $font-header-weight;
  margin-bottom: 2rem;
  @media #{$medium-up} {
    margin-bottom: 3rem;
  }
}

{% if settings.enable_headings_underline %}
  .section-title,
  .page__header__title.title-underline {
    &::after {
      content: '';
      display: block;
      margin: 1.5rem 0 0;
      width: 50px;
      height: 3px;
      opacity: 0.15;
    }
  }

  .section-title {
    &::after {
      background: $color-body-title;
    }
  }

  .text-center {
    .section-title, &.section-title,
    .page__header__title.title-underline {
      &::after {
        margin: 1.5rem auto 0;
      }
    }
  }
{% endif %}

.hero-section {
  background-color: $color-sections-bg;
  color: $color-sections-text;
  &.hero-section_full-screen {
    min-height: 100vh;
  }
  .hero__title {
    font-size: 42px;
    margin-bottom: 1.125rem;
  }
  .hero__text {
    font-size: 18px;
    margin-bottom: 2.25rem;
    p {
      line-height: 1.5;
      margin-bottom: 0;
    }
  }
}

.video-section .video__cover,
.map__container, .image-text__img img {
  border-radius: $border-radius;
}

.recent-posts-section {
  .post__image-wrap,
  .post__featured-img {
    height: 220px;
    border-radius: $border-radius;
  }
  .post__image-wrap {
    background: $color-sections-bg;
  }
  .recent-posts-item {
    .post__title a {
      color: inherit;
    }
    .post__tags {
      font-size: .875rem;
      font-weight: $font-header-weight;
      margin-bottom: 0.125rem;
    }
    .post__meta {
      font-size: .875rem;
      opacity: 0.6;
      margin-bottom: 0.25rem;
    }
    .post__title {
      font-size: 1.1875rem;
      font-weight: $font-header-weight;
      line-height: 1.25;
      margin-bottom: 0.25rem;
    }
  }
}

/*============================================================================
  Blog
==============================================================================*/
.blog-header {
  background-color: $color-sections-bg;
  color: $color-sections-text;
  a {
    color: inherit;
  }
}

.blogroll {
  .blog-tags-nav {
    margin-bottom: 0.75rem;
    .blog-tags-nav__title {
      text-transform: uppercase;
      font-size: 13px;
      font-weight: bold;
    }
    .menu {
      a {
        font-size: 15px;
      }
      .__active a {
        font-weight: bold;
      }
    }
  }
  .article-featured-img {
    border-radius: $border-radius;
    background-color: $color-sections-bg;
    img {
      border-radius: $border-radius;
    }
  }
  .article-title {
    font-size: 1.25rem;
    @media #{$medium-up} {
      font-size: 1.75rem;
    }
    a { color: $color-body-text; }
  }
  .article-meta {
    font-size: 13px;
    color: $color-secondary;
    span, a { color: $color-secondary; }
  }
  .article-meta__item::after {
    background-color: $color-secondary;
  }
}

.page__header_article {
  .article-meta {
    font-size: 15px;
    margin-bottom: 0.75rem;
  }
  .article__title {
    margin-bottom: 1.25rem;
    font-size: $page-title-size-mobile;
    @media #{$medium-up} {
      font-size: $page-title-size;
    }
  }
}

#comments {
  .comment .comment-meta time { color: $color-secondary; }
  .comment-form .info { color: $color-secondary; }
}

/*============================================================================
  Collection
==============================================================================*/
.collection-grid-item {
  color: $color-sections-text;
  .collection-image {
    height: 220px;
    background-color: $color-sections-bg;
    border-radius: $border-radius;
  }
  .collection-desc {
    .collection__title {
      font-size: 1.125rem;
      font-weight: $font-header-weight;
    }
    .collection__count {
      font-size: 18px;
    }
  }
}

.collection-page {
  .collection-nav {
    .menu {
      a {
        font-size: 15px;
      }
      .__active a {
        font-weight: bold;
      }
    }
  }
}

.collection-nav__title, .blog-tags-nav__title {
  text-transform: uppercase;
  font-size: 13px;
  font-weight: bold;
}

{% if settings.enable_headings_underline %}
  .collection-nav__title, .blog-tags-nav__title {
    &::after {
      content: '';
      display: block;
      margin: 0.875rem 0 0.125rem;
      width: 2.25rem;
      height: 2px;
      background: $color-body-title;
      opacity: 0.15;
    }
  }

.text-center {
  .collection-nav__title, .blog-tags-nav__title {
    &::after {
      margin: 0.875rem auto 0.125rem;
    }
  }
}

{% endif %}

.product-badge {
  color: $color-badge-text;
  font-size: 13px;
  font-weight: bold;
  text-transform: uppercase;
  &.badge__sale {
    background-color: $color-badge-sale-bg;
  }
  &.badge__sold-out {
    background-color: $color-badge-sold-out-bg;
  }
}

/*============================================================================
  Product Loop
==============================================================================*/
.product-loop-item {
  .product-loop-image {
    border-radius: $border-radius;
    overflow: hidden;
  }
  .product-loop-title {
    color: $color-collection-product-title;
    font-size: $loop-product-title-size;
    font-weight: $loop-product-title-weight;
    text-transform: $loop-product-title-transform;
    display: block;
    margin-bottom: 4px;
    line-height: 1.2;
  }
  .product-loop-price {
    color: $color-collection-product-price;
    line-height: 1.2;
    s {
      font-weight: $loop-product-price-weight;
      color: inherit;
      opacity: 0.6;
    }
    span {
      font-size: $loop-product-price-size;
      font-weight: $loop-product-price-weight;
    }
  }
  .product-badge {
    border-radius: $border-radius 0 $border-radius 0;
  }
}

/*============================================================================
  Product Page
==============================================================================*/
.product-page {
  #ProductImages.images-lightbox {
    a:hover {
      cursor: zoom-in;
    }
  }
  .product__image__item, .product__thumb {
    img {
      border-radius: $border-radius;
    }
  }
  .product-title {
    color: $color-product-title;
    text-transform: $product-title-transform;
    font-size: $product-title-size-mobile;
    @media #{$medium-up} {
      font-size: $product-title-size;
    }
  }
  .product-vendor a {
    color: $color-product-title;
    display: block;
    font-weight: bold;
    font-size: 15px;
    margin: -0.5rem 0 1.125rem;
  }
  #ComparePrice, #ProductPrice {
    color: $color-product-price;
    font-size: $product-price-size;
    font-weight: $product-price-weight;
  }
  #ComparePrice {  opacity: 0.5; }
  .product__variants__wrap label, label.quantity-selector {
    margin-bottom: 0.125rem;
  }
  #AddToCart {
    background-color: $color-product-buy-bg;
    color: $color-product-buy-text;
    &:hover { background-color: darken( $color-product-buy-bg, 10%); color: $color-product-buy-text;}
  }
  .product-description {
    color: $color-product-description;
    font-size: $product-description-size;
  }
}

.social-sharing .share-button {
  .share-title {
    color: $color-secondary;
    font-size: 0.75rem;
    font-weight: bold;
    text-transform: uppercase;
  }
}

/*============================================================================
  Cart Page
==============================================================================*/
.cart-page {
  .page-title {
    text-align: center;
    font-size: $page-title-size-mobile;
    @media #{$medium-up} {
      font-size: $page-title-size;
    }
  }
  .cart-items__title {
    color: $color-body-text;
    font-size: 1.125rem;
    font-weight: $font-header-weight;
  }
  .cart-info label { color: $color-body-text; }
}

/*============================================================================
  Customer Area
==============================================================================*/
.customer-page, .account-page {
  .page-title {
    font-size: $page-title-size-mobile;
    @media #{$medium-up} {
      font-size: $page-title-size;
    }
  }
}
.account-page {
  table.stack {
    @media screen and (max-width: 39.9375em) {
      tfoot {
        border-color: darken($color-body-bg, 11%);
        tr { border-bottom-color: darken($color-body-bg, 11%); }
      }
    }
  }
}

/*============================================================================
  Swatches Styles
==============================================================================*/
.product-page {
  .swatch label {
    border: 2px solid $color-border;
  }
  .swatch .swatch-element__inner {
    background-color: $color-border;
    font-size: 13px;
    font-weight: normal;
  }
  .swatch input:checked + label {
    border-color: $color-product-variant-active;
    color: $color-body-text;
    .swatch-element__inner {
      font-weight: bold;
    }
  }
  .swatch .swatch-element.soldout label {
    opacity: 0.6;
  }
  .swatch.error {
    background-color:#E8D2D2!important;
    color:#333!important;
  }
}

/*============================================================================
  Product Reviews
==============================================================================*/
.product-single {
  .spr-badge-container {
    min-height: 44px;
  }
  .spr-badge {
    .spr-badge-starrating, .spr-badge-caption {
      display: inline-block;
      margin-bottom: 1rem;
      margin-top: 0.25rem;
    }
    .spr-badge-caption {
      color: $color-secondary;
      font-size: 15px;
      margin-left: 4px;
    }
    .spr-icon {
      color: #ffbf00;
    }
  }
}

.product__reviews {
  margin-top: 1.5rem;
  .spr-header-title {
    font-size: 21px;
  }
  .spr-form-review-rating {
    a, a:hover, a:active, a:focus {
      color: #ffbf00;
    }
  }
  .spr-icon {
    color: #ffbf00;
  }
  .spr-container {
    border-color: $color-border;
  }
}

.product-loop-item {
  .spr-badge__wrap {
    min-height: 24px;
    margin-top: 3px;
  }
  .spr-badge {
    .spr-icon {
      top: 0;
      color: #ffc800;
      &:before {
        font-size: 16px;
      }
    }
    .spr-badge-caption {
      font-size: 14px;
      display: none;
    }
  }
}

/*============================================================================
  Image Full Screen Styles
==============================================================================*/
.blueimp-gallery {
  background: rgba(255,255,255,.95);
}
.blueimp-gallery>.title,
.blueimp-gallery>.close {
  text-shadow: none;
  color: #111;
  &:hover { color: #111; }
}
.blueimp-gallery>.next, .blueimp-gallery>.prev {
  border-color: rgba(0,0,0,0.1);
  color: #111;
  background: transparent;
  opacity: 1;
  &:hover { color: #111; border-color: #111; }
}

