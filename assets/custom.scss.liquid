  transform: translateY(-2px);
  color: #fff !important;
}
.wf-card__img {
  position: relative;
  aspect-ratio: 1/1;
  overflow: hidden;
  background: rgba(255,255,255,0.05);
}
.wf-card__img img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  transition: transform 0.3s ease;
}
.wf-card:hover .wf-card__img img { transform: scale(1.04); }
.wf-card__no-img {
