{% if section.settings.show_related_products %}

  {% assign related_products_number = section.settings.related_products_number | plus: 0 %}
  {% assign exclusions = 'frontpage,all' | split: ',' %}

  {% comment %} Find a relevant collection {% endcomment %}
  {% assign found_a_collection = false %}
  {% assign collection = blank %}

  {% if product.metafields.c_f['Related Products'] %}
    {% assign collection = collections[product.metafields.c_f['Related Products']] %}
  {% endif %}

  {% if collection and collection.all_products_count > 1 %}
    {% unless exclusions contains collection.handle %}
      {% assign found_a_collection = true %}
    {% endunless %}
  {% endif %}

  {% unless found_a_collection %}
    {% for c in product.collections %}
      {% unless exclusions contains c.handle or c.all_products_count < 2 %}
        {% assign found_a_collection = true %}
        {% assign collection = c %}
        {% break %}
      {% endunless %}
    {% endfor %}
  {% endunless %}

  {% if found_a_collection %}
    {% assign counter = 0 %}
    {% assign current_product = product %}

    {% capture related_items %}
      {% for p in collection.products %}
        {% unless p.handle == current_product.handle %}
          {%- assign p_on_sale = false -%}
          {%- if p.compare_at_price > p.price -%}{%- assign p_on_sale = true -%}{%- endif -%}
          {%- assign p_sold_out = true -%}
          {%- if p.available -%}{%- assign p_sold_out = false -%}{%- endif -%}

          <div class="rp-card">
            <a href="{{ p.url | within: collection }}" class="rp-card__image-wrap {% if settings.display_secondary_image and p.images.size > 1 %}rp-card__image-wrap--secondary{% endif %}">
              {% if settings.show_product_badges %}
                {% if p_sold_out %}
                  <span class="product-badge badge__sold-out">{{ 'products.product.out_of_stock' | t }}</span>
                {% elsif p_on_sale %}
                  <span class="product-badge badge__sale">Sale</span>
                {% endif %}
              {% endif %}

              {%- assign img_url = p.featured_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <img class="lazyload rp-card__img rp-card__img--primary"
                src="{{ p.featured_image | img_url: '600x' }}"
                data-src="{{ img_url }}"
                data-widths="[400, 600, 800]"
                data-aspectratio="{{ p.featured_image.aspect_ratio }}"
                data-sizes="auto"
                alt="{{ p.featured_image.alt | escape }}">

              {% if settings.display_secondary_image and p.images[1] != blank %}
                {%- assign sec_img_url = p.images[1] | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                <img class="lazyload rp-card__img rp-card__img--secondary"
                  src="{{ p.images[1] | img_url: '600x' }}"
                  data-src="{{ sec_img_url }}"
                  data-widths="[400, 600, 800]"
                  data-aspectratio="{{ p.images[1].aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ p.images[1].alt | escape }}">
              {% endif %}
            </a>

            <div class="rp-card__info">
              <a href="{{ p.url | within: collection }}" class="rp-card__title">{{ p.title }}</a>
              <div class="rp-card__price">
                {% if p_on_sale %}
                  <s class="rp-card__price--compare"><span class="money">{{ p.compare_at_price | money }}</span></s>
                  <span class="rp-card__price--sale"><span class="money">{{ p.price | money }}</span></span>
                {% else %}
                  <span><span class="money">{{ p.price | money }}</span></span>
                {% endif %}
                {% if p_sold_out %}
                  <span class="rp-card__sold-out">{{ 'products.product.sold_out' | t }}</span>
                {% endif %}
              </div>
            </div>
          </div>

          {% assign counter = counter | plus: 1 %}
          {% if counter == related_products_number %}{% break %}{% endif %}
        {% endunless %}
      {% endfor %}
    {% endcapture %}

    {% assign related_items = related_items | strip %}

    {% unless related_items == blank %}
      <section class="rp-section js-animate-appear-show" data-section-id="{{ section.id }}" data-section-type="related-products">

        <div class="row columns rp-section__header">
          {% unless section.settings.section_label == blank %}
            <span class="rp-section__label">{{ section.settings.section_label }}</span>
          {% endunless %}
          <h2 class="rp-section__title text-{{ section.settings.title_alignment }}">{{ section.settings.related_title }}</h2>
        </div>

        <div class="rp-scroll-container">
          <div class="rp-track" data-count="{{ counter }}">
            {{ related_items }}
          </div>
        </div>

        {% if counter > 2 %}
        <div class="row columns">
          <div class="rp-scroll-hint" aria-hidden="true">
            <span class="rp-scroll-hint__arrow">â†’</span>
            <span>{{ section.settings.scroll_hint_text }}</span>
          </div>
        </div>
        {% endif %}

      </section>
    {% endunless %}

  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Recommendations",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_related_products",
      "label": "Show recommendations",
      "default": true
    },
    {
      "type": "text",
      "id": "section_label",
      "label": "Label (small text above title)",
      "default": "COMPLETE THE LOOK"
    },
    {
      "type": "text",
      "id": "related_title",
      "label": "Section title",
      "default": "You May Also Like"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ]
    },
    {
      "type": "text",
      "id": "scroll_hint_text",
      "label": "Scroll hint text",
      "default": "Swipe to see more"
    },
    {
      "type": "select",
      "id": "related_products_number",
      "label": "Number of products",
      "default": "6",
      "options": [
        { "value": "4", "label": "4" },
        { "value": "6", "label": "6" },
        { "value": "8", "label": "8" }
      ]
    }
  ]
}
{% endschema %}
