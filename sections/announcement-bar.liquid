{% comment %}
  Announcement Bar — WF Urban Muscle v2
  • Toggle show/hide desde el editor
  • Carousel rotativo con múltiples mensajes
{% endcomment %}

{% assign wf_show_ann = false %}
{% if section.settings.show_bar %}
  {% if section.settings.visibility == 'all' %}
    {% assign wf_show_ann = true %}
  {% elsif section.settings.visibility == 'home' and template == 'index' %}
    {% assign wf_show_ann = true %}
  {% elsif section.settings.visibility == 'not_home' and template != 'index' %}
    {% assign wf_show_ann = true %}
  {% endif %}
{% endif %}
{% if wf_show_ann %}
<div class="ann-bar"
  style="background:{{ section.settings.bg_color }};color:{{ section.settings.text_color }};font-size:{{ section.settings.font_size }}px;"
  id="ann-bar-{{ section.id }}">

  {% assign messages = '' | split: '' %}
  {% assign links    = '' | split: '' %}
  {% for i in (1..5) %}
    {% assign msg_key  = 'msg' | append: i %}
    {% assign link_key = 'link' | append: i %}
    {% assign msg_val  = section.settings[msg_key] %}
    {% if msg_val != blank %}
      {% assign messages = messages | push: msg_val %}
      {% assign links    = links    | push: section.settings[link_key] %}
    {% endif %}
  {% endfor %}

  {% assign total = messages.size %}

  {% if total > 1 %}
    <button class="ann-bar__btn ann-bar__btn--prev" id="ann-prev-{{ section.id }}" aria-label="Anterior">&#8249;</button>
  {% endif %}

  <div class="ann-bar__viewport">
    <div class="ann-bar__track" id="ann-track-{{ section.id }}">
      {% for msg in messages %}
        <div class="ann-bar__slide{% if forloop.first %} is-active{% endif %}">
          {% assign lnk = links[forloop.index0] %}
          {% if lnk != blank %}
            <a href="{{ lnk }}" style="color:inherit;text-decoration:underline;text-underline-offset:2px;">{{ msg }}</a>
          {% else %}
            {{ msg }}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>

  {% if total > 1 %}
    <button class="ann-bar__btn ann-bar__btn--next" id="ann-next-{{ section.id }}" aria-label="Siguiente">&#8250;</button>
  {% endif %}
</div>

<style>
.ann-bar {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0.6rem 2.5rem;
  font-weight: 500;
  line-height: 1.4;
  overflow: hidden;
}
.ann-bar__viewport {
  flex: 1;
  overflow: hidden;
  text-align: center;
}
.ann-bar__track {
  display: flex;
  will-change: transform;
}
.ann-bar__slide {
  flex: 0 0 100%;
  min-width: 100%;
  padding: 0 0.5rem;
  opacity: 0;
  transform: translateY(6px);
  transition: opacity 0.4s ease, transform 0.4s ease;
  pointer-events: none;
}
.ann-bar__slide.is-active {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}
.ann-bar__btn {
  background: transparent;
  border: none;
  color: inherit;
  font-size: 1.35rem;
  line-height: 1;
  padding: 0 0.5rem;
  cursor: pointer;
  opacity: 0.6;
  transition: opacity 0.2s;
  flex-shrink: 0;
}
.ann-bar__btn:hover { opacity: 1; }
</style>

<script>
(function(){
  var id      = '{{ section.id }}';
  var track   = document.getElementById('ann-track-' + id);
  if (!track) return;
  var slides  = track.querySelectorAll('.ann-bar__slide');
  var total   = slides.length;
  if (total < 2) return;
  var current = 0;
  var speed   = {{ section.settings.speed | times: 1000 }};
  var timer;

  function show(n) {
    slides[current].classList.remove('is-active');
    current = (n + total) % total;
    slides[current].classList.add('is-active');
    track.style.transform = 'translateX(-' + (current * 100) + '%)';
  }
  function start() { timer = setInterval(function(){ show(current + 1); }, speed); }
  function stop()  { clearInterval(timer); }

  var btnP = document.getElementById('ann-prev-' + id);
  var btnN = document.getElementById('ann-next-' + id);
  if (btnP) btnP.addEventListener('click', function(){ stop(); show(current - 1); start(); });
  if (btnN) btnN.addEventListener('click', function(){ stop(); show(current + 1); start(); });

  start();
})();
</script>
{% endif %}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_bar",
      "label": "Activar barra de anuncios",
      "default": true
    },
    {
      "type": "select",
      "id": "visibility",
      "label": "Mostrar en",
      "default": "all",
      "options": [
        { "value": "all",      "label": "Todas las páginas" },
        { "value": "home",     "label": "Solo página principal" },
        { "value": "not_home", "label": "Todas excepto inicio" }
      ]
    },
    { "type": "header", "content": "Mensajes (hasta 5)" },
    { "type": "text",  "id": "msg1",  "label": "Mensaje 1", "default": "¡Envío gratis en pedidos mayores a $999!" },
    { "type": "url",   "id": "link1", "label": "Enlace 1 (opcional)" },
    { "type": "text",  "id": "msg2",  "label": "Mensaje 2 (deja vacío para quitar carousel)" },
    { "type": "url",   "id": "link2", "label": "Enlace 2 (opcional)" },
    { "type": "text",  "id": "msg3",  "label": "Mensaje 3 (opcional)" },
    { "type": "url",   "id": "link3", "label": "Enlace 3 (opcional)" },
    { "type": "text",  "id": "msg4",  "label": "Mensaje 4 (opcional)" },
    { "type": "url",   "id": "link4", "label": "Enlace 4 (opcional)" },
    { "type": "text",  "id": "msg5",  "label": "Mensaje 5 (opcional)" },
    { "type": "url",   "id": "link5", "label": "Enlace 5 (opcional)" },
    { "type": "header", "content": "Estilo" },
    {
      "type": "range", "id": "speed",
      "min": 2, "max": 12, "step": 1, "unit": "s",
      "label": "Velocidad del carousel", "default": 4
    },
    { "type": "color", "id": "bg_color",   "label": "Color de fondo",  "default": "#111110" },
    { "type": "color", "id": "text_color", "label": "Color de texto",  "default": "#ffffff" },
    {
      "type": "range", "id": "font_size",
      "min": 10, "max": 18, "step": 1, "unit": "px",
      "label": "Tamaño de fuente", "default": 13
    }
  ],
  "presets": [{ "name": "Announcement Bar", "category": "Header" }]
}
{% endschema %}
